@using System.Security.Claims
@using RadioCab.Models
@using Microsoft.EntityFrameworkCore
@inject RadioCabContext _context

@{
    bool isLoggedIn = User.Identity.IsAuthenticated;

    int userId = 0;
    string username = "";
    string userRole = "";

    bool canAccessAdvertise = false;
    string advertiseTooltip = "";
    int membershipId = 0;
    if (isLoggedIn)
    {
        username = User.FindFirst(ClaimTypes.Name)?.Value ?? User.Identity?.Name ?? "User";
        userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "";

        // FIXED: Get UserId from custom claim
        var userIdClaim = User.FindFirst("UserId")?.Value;
        if (!string.IsNullOrEmpty(userIdClaim) && int.TryParse(userIdClaim, out int parsedUserId))
        {
            userId = parsedUserId;
        }
        else
        {
            // Fallback
            int.TryParse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value, out userId);
        }

        if (userId > 0 && userRole == "Company")
        {
            var company = _context.Companies
                .AsNoTracking()
                .FirstOrDefault(c => c.UserId == userId);

            if (company != null)
            {
                membershipId = company.MembershipId;

                // DEBUG - Remove this after fixing
                // <div style="background: lightgreen; padding: 10px; margin: 10px; border: 2px solid green;">
                //     <h5>DEBUG INFO:</h5>
                //     <p>User ID: @userId</p>
                //     <p>Membership ID: @membershipId</p>
                //     <p>Company Found: YES</p>
                // </div>

                if (membershipId == 1)
                {
                    canAccessAdvertise = false;
                    advertiseTooltip = "Advertising is not available on the Basic plan.";
                }
                else if (membershipId == 2 || membershipId == 3)
                {
                    var today = DateTime.Today;
                    var hasActivePayment = _context.Payments
                        .Include(p => p.PaymentAmount)
                        .Any(p =>
                            p.UserId == userId &&
                            p.ExpiryDate >= today &&
                            (p.PaymentStatus == "Paid" || p.PaymentStatus == "Completed") &&
                            p.PaymentAmount.MembershipId == membershipId
                        );

                    canAccessAdvertise = hasActivePayment;

                    advertiseTooltip = hasActivePayment
                        ? ""
                        : "Advertising access expired. Renew your membership.";

                    // DEBUG - Remove this after fixing
                    // <div style="background: lightblue; padding: 10px; margin: 10px;">
                    //     <p>Membership ID: @membershipId (Premium/Business)</p>
                    //     <p>Has Active Payment: @hasActivePayment</p>
                    //     <p>Can Access Advertise: @canAccessAdvertise</p>
                    // </div>
                }
            }
            else
            {
                advertiseTooltip = "Company profile not found.";

                // DEBUG - Remove this after fixing
                // <div style="background: pink; padding: 10px; margin: 10px;">
                //     <p>ERROR: No company found with UserId = @userId</p>
                // </div>
            }
        }
        else
        {
            //     <div style="background: yellow; padding: 10px; margin: 10px;">
            //         <p>User ID or Role issue:</p>
            //         <p>User ID: @userId (must be > 0)</p>
            //         <p>User Role: @userRole (must be "Company")</p>
            //     </div>
        }
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="~/Company/Company/css/Layout.css" rel="stylesheet" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <style>
        .disabled-link {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
            text-decoration: none;
        }

        .advertise-link {
            position: relative;
        }

            .advertise-link.disabled-link::after {
                content: attr(data-tooltip);
                position: absolute;
                bottom: 100%;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 5px 10px;
                border-radius: 4px;
                font-size: 12px;
                white-space: nowrap;
                opacity: 0;
                transition: opacity 0.3s;
                pointer-events: none;
                z-index: 1000;
            }

            .advertise-link.disabled-link:hover::after {
                opacity: 1;
            }

        .membership-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 8px;
            vertical-align: middle;
        }

        .membership-basic {
            background-color: #6c757d;
            color: white;
        }

        .membership-premium {
            background-color: #ffc107;
            color: #000;
        }

        .membership-business {
            background-color: #0d6efd;
            color: white;
        }

        .membership-enterprise {
            background-color: #198754;
            color: white;
        }

        html {
            height: 100% !important;
            overflow: hidden !important;
        }

        body {
            height: 100% !important;
            overflow: hidden !important;
            margin: 0 !important;
        }
        /* Sidebar must ALWAYS scroll */
        .sidebar {
            position: fixed !important;
            top: 0 !important;
            left: 0 !important;
            height: 100vh !important;
            max-height: 100vh !important;
            overflow-y: auto !important;
            overflow-x: hidden !important;
        }
    </style>
</head>
<body>
    <!-- Sidebar - Fixed, non-scrolling -->
    <div class="sidebar" id="sidebar">
        <div class="logo-container">
            <div class="logo">D</div>
            <div class="logo-text">Radio Cab -<br/>Company Dashboard</div>
        </div>

        <div class="sidebar-links">

            <!-- Dashboard -->
            <a asp-action="Index" asp-controller="Company" class="sidebar-link">
                <i class="fas fa-chart-bar"></i>
                <span>Dashboard</span>
            </a>

            <!-- Services -->
            <a asp-action="Service" asp-controller="Company" class="sidebar-link">
                <i class="fas fa-cogs"></i>
                <span>Services</span>
            </a>

            <!-- Feedback -->
            <a asp-action="Feedback" asp-controller="Company" class="sidebar-link">
                <i class="fas fa-comment-alt"></i>
                <span>Feedback</span>
            </a>
            <!-- Payment -->
            <a asp-action="PaymentPage" asp-controller="Company" class="sidebar-link">
                <i class="fas fa-money-bill-wave"></i>
                <span>Payment</span>
            </a>
            <a asp-action="ContactRequests" asp-controller="Company" class="sidebar-link">
                <i class="fas fa-person"></i>
                <span>Contact Requests</span>
            </a>

            <!-- Vacancy -->
            <a asp-action="VacancyPage" asp-controller="Company" class="sidebar-link">
                <i class="fa-solid fa-briefcase"></i>
                <span>Vacancy</span>
            </a>

            <!-- Vacancy Application -->
            <a asp-action="VacancyAppPage" asp-controller="Company" class="sidebar-link">
                <i class="fa-solid fa-file-lines"></i>
                <span>Vacancy Application</span>
            </a>

            <!-- Advertise -->
            @if (canAccessAdvertise)
            {
                <a asp-action="AdvertisementList" asp-controller="Company" class="sidebar-link">
                    <i class="fas fa-bullhorn"></i>
                    <span>Advertise</span>
                </a>
            }
            else
            {
                <a href="#" class="sidebar-link disabled-link" data-tooltip="@advertiseTooltip">
                    <i class="fas fa-bullhorn"></i>
                    <span>Advertise</span>
                    <i class="fas fa-lock ms-auto" style="font-size:12px;"></i>
                </a>
            }

            <!-- Profile -->
            <a asp-action="Profile" asp-controller="Company" class="sidebar-link">
                <i class="fas fa-user-circle"></i>
                <span>Profile</span>
            </a>
        </div>



        <div class="logout-container">
            <a asp-action="Logout" asp-controller="Account" class="logout-link">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>
    <div class="main-content">
        <div class="header">
            <div>
                <div class="hamburger-menu" id="hamburgerMenu">
                    <i class="fas fa-bars"></i>
                </div>
                <h1>Your Dashboard</h1>
            </div>
            @if (isLoggedIn && userId > 0)
            {
                <div class="user-info">
                    <div class="user-avatar">@(string.Join("", username.Split(' ').Select(n => n[0])))</div>
                    <div>
                        <div style="font-weight: 600; color: var(--primary); display: flex; align-items: center;">
                            @username
                            @{
                                // Get membership info for badge
                                var company = _context.Companies
                                .Include(c => c.Membership)
                                .FirstOrDefault(c => c.UserId == userId);

                                if (company?.Membership != null)
                                {
                                    string badgeClass = "";
                                    switch (company.MembershipId)
                                    {
                                        case 1:
                                            badgeClass = "membership-basic";
                                            break;
                                        case 2:
                                            badgeClass = "membership-premium";
                                            break;
                                        case 3:
                                            badgeClass = "membership-business";
                                            break;
                                        case 4:
                                            badgeClass = "membership-enterprise";
                                            break;
                                        default:
                                            badgeClass = "membership-basic";
                                            break;
                                    }

                                    <span class="membership-badge @badgeClass">@company.Membership.MembershipName</span>
                                }
                            }
                        </div>
                        <div style="font-size: 0.9rem; color: var(--neutral-light);">
                            @userRole
                            @if (!canAccessAdvertise && company?.MembershipId == 1)
                            {
                                <span style="color: #dc3545; font-size: 0.8rem;">
                                    <i class="fas fa-info-circle"></i> Upgrade for advertising
                                </span>
                            }
                            else if (!canAccessAdvertise)
                            {
                                <span style="color: #dc3545; font-size: 0.8rem;">
                                    <i class="fas fa-clock"></i> Advertise expired
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Company/js/Layout.js"></script>
    <script>
        // Add click prevention for disabled advertise link
        document.addEventListener('DOMContentLoaded', function() {
            const disabledLinks = document.querySelectorAll('.sidebar-link.disabled-link');
            disabledLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    // Show tooltip
                    const tooltip = this.getAttribute('data-tooltip');
                    if (tooltip) {
                        alert(tooltip); // Simple alert for now, can be replaced with a nicer popup
                    }
                });
            });
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>