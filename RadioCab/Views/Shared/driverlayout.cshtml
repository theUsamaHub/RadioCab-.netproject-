@using System.Security.Claims
@using RadioCab.Models
@using Microsoft.EntityFrameworkCore
@inject RadioCabContext _context

@{
    bool isLoggedIn = User.Identity.IsAuthenticated;

    int userId = 0;
    string username = "";
    string userRole = "";

    bool canAccessAdvertise = false;
    string advertiseTooltip = "";

    int membershipId = 0;

    if (isLoggedIn)
    {
        username = User.FindFirst(ClaimTypes.Name)?.Value ?? User.Identity?.Name ?? "User";
        userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "";

        // Get UserId from custom claim
        var userIdClaim = User.FindFirst("UserId")?.Value;
        if (!string.IsNullOrEmpty(userIdClaim) && int.TryParse(userIdClaim, out int parsedUserId))
        {
            userId = parsedUserId;
        }
        else
        {
            // Fallback
            int.TryParse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value, out userId);
        }

        if (userId > 0 && userRole == "Driver")
        {
            var driver = _context.Drivers
                .AsNoTracking()
                .FirstOrDefault(d => d.UserId == userId);

            if (driver != null)
            {
                membershipId = driver.MembershipId;

                if (membershipId == 1)
                {
                    canAccessAdvertise = false;
                    advertiseTooltip = "Advertising is not available on the Basic plan.";
                }
                else if (membershipId == 2 || membershipId == 3)
                {
                    var today = DateTime.Today;
                    var hasActivePayment = _context.Payments
                        .Include(p => p.PaymentAmount)
                        .Any(p =>
                            p.UserId == userId &&
                            p.ExpiryDate >= today &&
                            (p.PaymentStatus == "Paid" || p.PaymentStatus == "Completed") &&
                            p.PaymentAmount.MembershipId == membershipId
                        );

                    canAccessAdvertise = hasActivePayment;

                    advertiseTooltip = hasActivePayment
                        ? ""
                        : "Advertising access expired. Renew your membership.";
                }
                else
                {
                    // Handle other membership IDs if needed
                    canAccessAdvertise = false;
                    advertiseTooltip = "Advertising not available for your membership level.";
                }
            }
            else
            {
                advertiseTooltip = "Driver profile not found.";
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="~/Driver/css/Layout.css" rel="stylesheet" asp-append-version="true" />
    <style>
        .disabled-link {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
            text-decoration: none;
        }

        .advertise-link {
            position: relative;
        }

            .advertise-link.disabled-link::after {
                content: attr(data-tooltip);
                position: absolute;
                bottom: 100%;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 5px 10px;
                border-radius: 4px;
                font-size: 12px;
                white-space: nowrap;
                opacity: 0;
                transition: opacity 0.3s;
                pointer-events: none;
                z-index: 1000;
            }

            .advertise-link.disabled-link:hover::after {
                opacity: 1;
            }

        .membership-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 8px;
            vertical-align: middle;
        }

        .membership-basic {
            background-color: #6c757d;
            color: white;
        }

        .membership-premium {
            background-color: #ffc107;
            color: #000;
        }

        .membership-business {
            background-color: #0d6efd;
            color: white;
        }

        .membership-enterprise {
            background-color: #198754;
            color: white;
        }

        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden; /* prevent double scroll */
        }

        /* Sidebar must ALWAYS scroll */
        .sidebar {
            position: fixed !important;
            top: 0 !important;
            left: 0 !important;
            height: 100vh !important;
            max-height: 100vh !important;
            overflow-y: auto !important;
            overflow-x: hidden !important;
        }

        /* Main content wrapper */
        .main-content {
            margin-left: 260px; /* adjust to sidebar width */
            height: 100vh;
            overflow-y: auto;
            overflow-x: hidden;
        }

            /* Optional: ensure body content can grow */
            .main-content > * {
                min-height: max-content;
            }

    </style>
</head>
<body>
    <!-- Sidebar - Fixed, non-scrolling -->
    <div class="sidebar" id="sidebar">
        <div class="logo-container">
            <div class="logo">D</div>
            <div class="logo-text">Driver Dashboard</div>
        </div>

        <div class="sidebar-links">

            <!-- Dashboard -->
            <a asp-action="Index" asp-controller="Driver" class="sidebar-link">
                <i class="fas fa-chart-bar"></i>
                <span>Dashboard</span>
            </a>

            <!-- Services -->
            <a asp-action="Service" asp-controller="Driver" class="sidebar-link">
                <i class="fas fa-cogs"></i>
                <span>Services</span>
            </a>

            <!-- Feedback -->
            <a asp-action="Feedback" asp-controller="Driver" class="sidebar-link">
                <i class="fas fa-comment-alt"></i>
                <span>Feedback</span>
            </a>

            <!-- Payment -->
            <a asp-action="PaymentPageDriver" asp-controller="Driver" class="sidebar-link">
                <i class="fas fa-money-bill-wave"></i>
                <span>Payment</span>
            </a>
            <!-- In Views/Shared/DriverLayout.cshtml -->
            
                <a class="sidebar-link" href="@Url.Action("ContactRequests", "Driver")">
                    <i class="fas fa-envelope me-2"></i>
                    Contact Requests
                    @if (ViewBag.NewRequestsCount > 0)
                    {
                        <span class="badge bg-danger">@ViewBag.NewRequestsCount</span>
                    }
                </a>
        
            <!-- Profile -->
            <a asp-action="DriverProfile" asp-controller="Driver" class="sidebar-link">
                <i class="fas fa-user-circle"></i>
                <span>Profile</span>
            </a>

            <!-- Advertise -->
            @if (canAccessAdvertise)
            {
                <a asp-action="AdvertisementList" asp-controller="Driver" class="sidebar-link">
                    <i class="fas fa-bullhorn"></i>
                    <span>Advertise</span>
                </a>
            }
            else
            {
                <a href="#" class="sidebar-link disabled-link" data-tooltip="@advertiseTooltip">
                    <i class="fas fa-bullhorn"></i>
                    <span>Advertise</span>
                    <i class="fas fa-lock ms-auto" style="font-size:12px;"></i>
                </a>
            }

          

         

        

        </div>

        <div class="logout-container">
            <a asp-action="Logout" asp-controller="Account" class="logout-link">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>
    <div class="main-content">
        <div class="header">
            <div>
                <div class="hamburger-menu" id="hamburgerMenu">
                    <i class="fas fa-bars"></i>
                </div>
                <h1>Driver Dashboard</h1>
            </div>
            @if (isLoggedIn && userId > 0)
            {
                <div class="user-info">
                    <div class="user-avatar">@(string.Join("", username.Split(' ').Select(n => n[0])))</div>
                    <div>
                        <div style="font-weight: 600; color: var(--primary); display: flex; align-items: center;">
                            @username
                            @{
                                // Get membership info for badge
                                var driver = _context.Drivers
                                .Include(d => d.Membership)
                                .FirstOrDefault(d => d.UserId == userId);

                                if (driver?.Membership != null)
                                {
                                    string badgeClass = "";
                                    switch (driver.MembershipId)
                                    {
                                        case 1:
                                            badgeClass = "membership-basic";
                                            break;
                                        case 2:
                                            badgeClass = "membership-premium";
                                            break;
                                        case 3:
                                            badgeClass = "membership-business";
                                            break;
                                        case 4:
                                            badgeClass = "membership-enterprise";
                                            break;
                                        default:
                                            badgeClass = "membership-basic";
                                            break;
                                    }

                                    <span class="membership-badge @badgeClass">@driver.Membership.MembershipName</span>
                                }
                            }
                        </div>
                        <div style="font-size: 0.9rem; color: var(--neutral-light);">
                            @userRole
                            @if (!canAccessAdvertise && driver?.MembershipId == 1)
                            {
                                <span style="color: #dc3545; font-size: 0.8rem;">
                                    <i class="fas fa-info-circle"></i> Upgrade for advertising
                                </span>
                            }
                            else if (!canAccessAdvertise)
                            {
                                <span style="color: #dc3545; font-size: 0.8rem;">
                                    <i class="fas fa-clock"></i> Advertise expired
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Driver/js/Layout.js"></script>
    <script>
        // Add click prevention for disabled advertise link
        document.addEventListener('DOMContentLoaded', function() {
            const disabledLinks = document.querySelectorAll('.sidebar-link.disabled-link');
            disabledLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    // Show tooltip
                    const tooltip = this.getAttribute('data-tooltip');
                    if (tooltip) {
                        alert(tooltip);
                    }
                });
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>