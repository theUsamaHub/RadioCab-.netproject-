@{
    ViewData["Title"] = "Subscription Expired";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 1rem;
        }

        .card-header {
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .icon-lg {
            font-size: 4rem;
        }

        .btn-lg {
            font-weight: 600;
            padding: 0.75rem 1.25rem;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-danger text-white text-center py-4">
                        <h3 class="mb-0">
                            <i class="fas fa-ban me-2"></i>
                            Subscription Expired
                        </h3>
                    </div>

                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="fas fa-calendar-times icon-lg text-danger mb-3"></i>
                            <h4 class="text-danger">Your subscription is no longer active</h4>

                            @if (ViewBag.ExpiryDate != null)
                            {
                                <p class="text-muted">
                                    Expired on:
                                    <strong>@(((DateTime)ViewBag.ExpiryDate).ToString("MMMM dd, yyyy"))</strong>
                                </p>
                            }
                        </div>

                        <p class="lead mb-4">
                            Access to company features has been temporarily restricted because your
                            subscription has expired.
                        </p>

                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle me-2"></i>
                            Renew your plan to restore full access. Approval may be required after payment.
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <a asp-action="MembershipPlans" asp-controller="Company"
                               class="btn btn-danger btn-lg">
                                <i class="fas fa-sync-alt me-2"></i>
                                Renew Subscription
                            </a>

                            <a asp-action="Logout" asp-controller="Account"
                               class="btn btn-outline-secondary btn-lg">
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
