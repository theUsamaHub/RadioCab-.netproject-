@model RadioCab.Models.PaymentValidate
@{
    ViewData["Title"] = "Payment";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Processing</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/Company/css/payment.css" rel="stylesheet" />
</head>

<body>

    <div class="form-container">
        <div class="form-card">

            <div class="form-header">
                <h1><i class="fas fa-credit-card me-2"></i>Payment Processing</h1>
                <p>Complete your payment securely</p>
            </div>

            <div class="form-body">
                <form asp-action="Payment"
                      method="post"
                      enctype="multipart/form-data">

                    @Html.AntiForgeryToken()

                    <div class="text-danger mb-2" asp-validation-summary="All"></div>

                    <input type="hidden" name="membershipid" value="@ViewBag.MembershipId" />

                    <!-- PAYMENT METHOD -->
                    <div class="form-section">
                        <label asp-for="PaymentMethodId" class="form-label">
                            <i class="fas fa-money-check-alt"></i> Payment Method
                        </label>

                        <select asp-for="PaymentMethodId"
                                asp-items="@ViewBag.PaymentMethod"
                                class="form-select">
                            <option value="">Select payment method</option>
                        </select>

                        <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                    </div>

                    <!-- PAYMENT DURATION -->
                    <div class="form-section">
                        <label class="form-label">
                            <i class="fas fa-calendar-alt"></i> Payment Duration
                        </label>

                        <div class="row g-4">
                            @foreach (var p in (IEnumerable<dynamic>)ViewBag.Duration)
                            {
                                var radioId = $"duration_{p.PaymentAmountId}";

                                <div class="col-md-6">
                                    <div class="duration-option">
                                        <input type="radio"
                                               id="@radioId"
                                               asp-for="PaymentAmountId"
                                               value="@p.PaymentAmountId"
                                               class="duration-radio" />

                                        <label for="@radioId" class="duration-label">
                                            <div>
                                                <div class="duration-name">@p.PaymentType</div>
                                                <div class="duration-desc">Billed @p.PaymentType</div>
                                            </div>
                                            <div class="duration-price">
                                                @p.Amount
                                                <span class="text-muted">/@p.PaymentType</span>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>

                        <span asp-validation-for="PaymentAmountId" class="text-danger"></span>
                    </div>

                    <!-- TRANSACTION ID -->
                    <div class="form-section">
                        <label asp-for="TransactionId" class="form-label">
                            <i class="fas fa-receipt"></i> Transaction ID
                        </label>

                        <input asp-for="TransactionId"
                               class="form-control"
                               placeholder="ABC-12345" />

                        <span asp-validation-for="TransactionId" class="text-danger"></span>
                    </div>

                    <!-- SCREENSHOT -->
                    <div class="form-section">
                        <label class="form-label">
                            <i class="fas fa-file-upload"></i> Payment Screenshot
                        </label>

                        <input type="file"
                               name="paymentScreenshot"
                               class="form-control"
                               accept="image/*,application/pdf" />

                    </div>

                    <!-- ACTIONS -->
                    <div class="form-buttons">
                        <button type="reset" class="btn btn-secondary">
                            Reset
                        </button>

                        <button type="submit" class="btn btn-primary">
                            Complete Payment
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
