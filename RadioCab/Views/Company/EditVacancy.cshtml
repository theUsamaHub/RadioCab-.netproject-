@model RadioCab.Models.CompanyVacancyValidate
@{
    ViewData["Title"] = "CreateVacancy";
    Layout = "~/Views/Shared/CompanyLayout.cshtml";
}

<link rel="stylesheet" href="~/Company/css/VacancyForm.css" asp-append-version="true" />

<!-- Reset Confirmation Message -->
<div class="reset-confirmation" id="resetConfirmation">
    <i class="fas fa-check-circle"></i>
    <span>Form has been reset successfully</span>
</div>

<!-- Main Container -->
<div class="container">


    <!-- Form Container -->
    <div class="form-container">
        <!-- Header -->
        <div class="form-header">
            <h1>Create Job Posting</h1>
            <p>Fill in the details below to publish your job opportunity. Our platform connects you with top talent.</p>
            <div class="header-decoration"></div>
        </div>
        <form asp-action="EditVacancy" method="post" id="jobPostingForm">
            <div class="text-danger mb-2" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="CompanyId" />
            <input type="hidden" asp-for="VacancyId" />
            <div class="form-row">
                <!-- Left Column -->
                <div class="form-col">
                    <!-- Job Title -->
                    <div class="form-group">
                        <label asp-for="JobTitle" class="form-label required">
                            <span class="label-icon"><i class="fas fa-heading"></i></span>
                            Job Title
                        </label>
                        <div class="input-group">
                            <input type="text" asp-for="JobTitle" class="form-control with-icon" id="jobTitle"
                                   placeholder="e.g. Senior Frontend Developer">
                            <span class="input-icon"><i class="fas fa-briefcase"></i></span>
                        </div>
                        <div class="info-text">
                            <i class="fas fa-info-circle"></i> Be specific to attract the right candidates
                        </div>
                    </div>

                    <!-- Job Description -->
                    <div class="form-group">
                        <label asp-for="JobDescription" class="form-label required">
                            <span class="label-icon"><i class="fas fa-file-alt"></i></span>
                            Job Description
                        </label>
                        <div class="input-group">
                            <textarea asp-for="JobDescription" class="form-control with-icon" id="jobDescription"
                                      placeholder="Describe the role, responsibilities, and requirements..."
                                      rows="6"></textarea>
                            <span class="input-icon"><i class="fas fa-align-left"></i></span>
                        </div>
                        <div class="char-count" id="charCount">0/2000 characters</div>
                        <div class="info-text">
                            <i class="fas fa-lightbulb"></i> Include key responsibilities, skills required, and day-to-day tasks
                        </div>
                    </div>

                    <!-- Required Experience -->
                    <div class="form-group">
                        <label asp-for="RequiredExperience" class="form-label required">
                            <span class="label-icon"><i class="fas fa-chart-line"></i></span>
                            Required Experience
                        </label>
                        <div class="input-group">
                            <input asp-for="RequiredExperience" type="text" class="form-control with-icon" id="requiredExperience"
                                   placeholder="e.g. 3-5 years in web development">
                            <span class="input-icon"><i class="fas fa-user-tie"></i></span>
                        </div>
                        <div class="info-text">
                            <i class="fas fa-clock"></i> Specify years or relevant experience level
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="form-col">
                    <!-- Job Type -->
                    <div class="form-group">
                        <label asp-for="JobType" class="form-label required">
                            <span class="label-icon"><i class="fas fa-clock"></i></span>
                            Job Type
                        </label>
                        <select asp-for="JobType" class="form-select" id="jobType" asp-items="@ViewBag.jobtype">
                            <option value="" selected disabled>Select employment type</option>

                        </select>
                        <div class="info-text">
                            <i class="fas fa-calendar-alt"></i> Define the employment arrangement
                        </div>
                    </div>

                    <!-- Salary -->
                    <div class="form-group">
                        <label asp-for="Salary" class="form-label required">
                            <span class="label-icon"><i class="fas fa-money-bill-wave"></i></span>
                            Salary Range
                        </label>
                        <div class="input-group">
                            <input asp-for="Salary" type="text" class="form-control with-icon" id="salary"
                                   placeholder="e.g. $80,000 - $100,000 annually">
                            <span class="input-icon"><i class="fas fa-dollar-sign"></i></span>
                        </div>
                        <div class="info-text">
                            <i class="fas fa-handshake"></i> Competitive salaries attract better candidates
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="form-group">
                        <label asp-for="Location" class="form-label required">
                            <span class="label-icon"><i class="fas fa-map-marker-alt"></i></span>
                            Location
                        </label>
                        <div class="input-group">
                            <input asp-for="Location" type="text" class="form-control with-icon" id="location"
                                   placeholder="e.g. San Francisco, CA or Remote">
                            <span class="input-icon"><i class="fas fa-globe-americas"></i></span>
                        </div>
                        <div class="info-text">
                            <i class="fas fa-laptop-house"></i> Specify if remote, hybrid, or onsite
                        </div>
                    </div>


                </div>
            </div>

            <!-- Button Container -->
            <div class="button-container">
                <button type="button" class="btn btn-reset" onclick="history.back()">
                    <i class="fas fa-arrow-left btn-icon"></i> Back
                </button>
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-paper-plane btn-icon"></i> Update Job Posting
                </button>


            </div>

            <!-- Footer -->
            <div class="footer">
                <p class="mb-1"><i class="fas fa-shield-alt me-1"></i> All information is secured and confidential</p>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/Company/js/VacancyForm.js"></script>

