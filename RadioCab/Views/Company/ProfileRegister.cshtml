@model RadioCab.Models.CompanyValidate
@{
    ViewData["Title"] = "ProfileRegister";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Profile Registration</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/Company/css/register.css" asp-append-version="true" />
</head>
<body>
 
    <!-- Enhanced Animated Background -->
    <div class="animated-bg">
        <div class="bg-particle particle-1"></div>
        <div class="bg-particle particle-2"></div>
        <div class="bg-particle particle-3"></div>
        <div class="bg-particle particle-4"></div>
        <div class="bg-particle particle-5"></div>
        <div class="bg-particle particle-6"></div>
        <div class="bg-particle particle-7"></div>
        <div class="bg-particle particle-8"></div>
    </div>
    
    <!-- Form Container -->
    <div class="container form-container">
        <div class="form-card">
            <!-- Form Header -->
            <div class="form-header">
                <h1 class="form-title">Business Registration</h1>
                <p class="form-subtitle">Complete your registration in two simple steps</p>
                
                <!-- Step Indicator -->
                <div class="step-indicator">
                    <div class="step active" id="step1-indicator">
                        <div class="step-circle">1</div>
                        <div class="step-label">Company Details</div>
                    </div>
                    <div class="step" id="step2-indicator">
                        <div class="step-circle">2</div>
                        <div class="step-label">Required Documents</div>
                    </div>
                </div>
            </div>
            
            <!-- Step 1: Company Details Form -->
            <form id="registrationForm" action="#" method="POST" enctype="multipart/form-data">
                <input type="hidden" asp-for="MembershipId" />
                <div class="form-step active" id="step1">
                    <div class="row">
                        <div class="text-danger mb-2" asp-validation-summary="All"></div>
                        <!-- Company Name with building icon -->
                        <div class="col-md-12 mb-4">
                            <label asp-for="CompanyName" class="form-label required">Company/Business Name</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-building"></i>
                                </span>
                                <input type="text" asp-for="CompanyName" class="form-control" id="companyName" 
                                       placeholder="Enter your company or business name">
                            </div>
                        </div>
                        
                        <!-- Contact Person with user icon -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="ContactPerson" class="form-label required">Contact Person</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" asp-for="ContactPerson" class="form-control" id="contactPerson" 
                                       readonly >
                            </div>
                        </div>
                        
                        <!-- Designation with briefcase icon -->
                       
                                      <div class="col-md-6 mb-4">
    <label asp-for="Designation" class="form-label required">Designation</label>
    <div class="input-group">
        <span class="input-group-text">
                                    <i class="fas fa-briefcase"></i>
        </span>

                                <select asp-for="Designation" class="form-select" id="Designation" asp-items="ViewBag.Designation">
                                    <option value="" disabled selected>Select Designation</option>
            
        </select>
    </div>
</div>
                        
                        <!-- Company Address with address card icon -->
                        <div class="col-md-12 mb-4">
                            <label asp-for="Address" class="form-label required">Company Address</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-address-card"></i>
                                </span>
                                <input type="text" asp-for="Address" class="form-control" id="companyAddress"  
                                       placeholder="Enter complete company address">
                            </div>
                        </div>
                        
                        <!-- Telephone with phone icon -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="Telephone"  class="form-label required">Telephone</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-phone"></i>
                                </span>
                                <input type="tel" class="form-control" id="telephone" 
                                       asp-for="Telephone" readonly>
                            </div>
                        </div>
                        
                        <!-- Fax Number with fax icon -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="FaxNumber" class="form-label">Fax Number</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-fax"></i>
                                </span>
                                <input asp-for="FaxNumber" type="text" class="form-control" id="faxNumber"  
                                       placeholder="Enter fax number">
                            </div>
                        </div>
                        
                        <!-- Email with envelope icon -->
                        <div class="col-md-6 mb-4">
                            <label asp-for="Email" class="form-label required">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" class="form-control" id="email" asp-for="Email" readonly>
                            </div>
                        </div>
                        
                        <!-- City with map marker icon -->
                        <div class="col-md-6 mb-4">
    <label asp-for="CityId" class="form-label required">City</label>
    <div class="input-group">
        <span class="input-group-text">
            <i class="fas fa-map-marker-alt"></i>
        </span>

                                <select asp-for="CityId" class="form-select" id="CityId" asp-items="ViewBag.City">
                                    <option value="" disabled selected>Select City</option>
            
        </select>
    </div>
</div>
                        
                        <!-- Description with edit icon -->
                        <div class="col-md-12 mb-4">
                            <label asp-for="Description" class="form-label">Company Description</label>
                            <div class="textarea-with-icon">
                                <i class="fas fa-edit input-icon"></i>
                                <textarea class="form-control" id="description" asp-for="Description"
                                          rows="5" placeholder="Briefly describe your business activities, products, and services"></textarea>
                            </div>
                            <div class="form-text">Optional: Provide a description of your business (max 500 characters).</div>
                        </div>
                    </div>
                    
                    <!-- Navigation for Step 1 -->
                    <div class="form-navigation">
                        <div></div> <!-- Empty div for spacing -->
                        <button type="button" class="btn btn-primary-custom" id="nextBtn">
                            Next: Required Documents <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Step 2: Required Documents Form -->
                <div class="form-step" id="step2">
                    <div class="row">
                        <!-- Company Logo with image icon -->
                        <div class="col-md-12 mb-4">
                            <label for="logoInput" class="form-label required">Company Logo</label>
                            <div class="file-upload-container" onclick="document.getElementById('logoInput').click()">
                                <div class="file-upload-icon">
                                    <i class="fas fa-image"></i>
                                </div>
                                <p class="mb-2">Click to upload your company logo</p>
                                <p class="file-info">PNG, JPG, GIF up to 5MB</p>
                            </div>
                            <input type="file" class="d-none" id="logoInput" name="logo" 
                                   accept="image/*" onchange="previewImage(this, 'logoPreview')">
                            
                            <!-- Image preview container -->
                            <div class="image-preview-container" id="logoPreviewContainer">
                                <p class="mb-1">Logo Preview:</p>
                                <img id="logoPreview" class="image-preview" alt="Logo preview">
                                <div class="file-name" id="logoFileName"></div>
                            </div>
                        </div>
                        
                        <!-- FBR Certificate with file pdf icon -->
                        <div class="col-md-6 mb-4">
                            <label for="fbrInput" class="form-label required">FBR Certificate (PDF)</label>
                            <div class="file-upload-container" onclick="document.getElementById('fbrInput').click()">
                                <div class="file-upload-icon">
                                    <i class="fas fa-file-pdf"></i>
                                </div>
                                <p class="mb-2">Upload FBR Certificate</p>
                                <p class="file-info">PDF up to 10MB</p>
                            </div>
                            <input type="file" class="d-none" id="fbrInput" name="fbr_certificate" 
                                   accept=".pdf" onchange="showFileName(this, 'fbrFileName')">
                            <div class="file-name" id="fbrFileName" style="display: none;"></div>
                        </div>
                        
                        <!-- Business License with file contract icon -->
                        <div class="col-md-6 mb-4">
                            <label for="licenseInput" class="form-label required">Business License (PDF)</label>
                            <div class="file-upload-container" onclick="document.getElementById('licenseInput').click()">
                                <div class="file-upload-icon">
                                    <i class="fas fa-file-contract"></i>
                                </div>
                                <p class="mb-2">Upload Business License</p>
                                <p class="file-info">PDF up to 10MB</p>
                            </div>
                            <input type="file" class="d-none" id="licenseInput" name="business_license" 
                                   accept=".pdf" onchange="showFileName(this, 'licenseFileName')">
                            <div class="file-name" id="licenseFileName" style="display: none;"></div>
                        </div>
                    </div>
                    
                    <!-- Navigation for Step 2 -->
                    <div class="form-navigation">
                        <button type="button" class="btn btn-outline-custom" id="backBtn">
                            <i class="fas fa-arrow-left me-2"></i> Back
                        </button>
                        <div class="btn-group-custom">
                            <button type="button" class="btn btn-secondary-custom" id="resetBtn">
                                <i class="fas fa-redo me-2"></i> Reset Form
                            </button>
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="fas fa-paper-plane me-2"></i> Submit Registration
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    

       <script src="~/Company/js/register.js"></script>
</body>
</html>




