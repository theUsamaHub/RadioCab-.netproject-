@model RadioCab.Models.CompanyValidate
@{
    ViewData["Title"] = "EditProfile";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Profile Form</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/Company/css/EditRegister.css" rel="stylesheet" asp asp-append-version="true" />
</head>
<body>
    <div class="split-container">
        <!-- Left Panel: Contact Information -->
        <div class="contact-panel">
            <div class="contact-header">
                <div class="contact-icon">
                    <i class="fas fa-user"></i>
                </div>
                <h2 class="contact-name">@Model.ContactPerson</h2>

            </div>

            <div class="contact-info">
                <div class="info-item" style="animation-delay: 0.1s">
                    <div class="info-icon">
                        <i class="fas fa-user-tag"></i>
                    </div>
                    <div class="info-content">
                        <h5>Contact Name</h5>
                        <p>@Model.ContactPerson</p>
                    </div>
                </div>

                <div class="info-item" style="animation-delay: 0.2s">
                    <div class="info-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="info-content">
                        <h5>Email Address</h5>
                        <p>@Model.Email<p>
                    </div>
                </div>

                <div class="info-item" style="animation-delay: 0.3s">
                    <div class="info-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="info-content">
                        <h5>Phone Number</h5>
                        <p>@Model.Telephone</p>
                    </div>
                </div>
            </div>

            <div class="decorative-line"></div>

            <div class="contact-note">
                <p style="color: #666; font-size: 14px; line-height: 1.6;">
                    <i class="fas fa-info-circle" style="color: var(--gold); margin-right: 8px;"></i>
                    This contact information is displayed from your professional profile. Update your company details using the form.
                </p>
            </div>
        </div>

        <!-- Right Panel: Form -->
        <div class="form-panel">
            <div class="form-header">
                <h2>Company Details</h2>
                <p>Complete your professional profile information</p>
            </div>

            <form asp-action="EditProfile" method="post" id="companyForm">
                <input type="hidden" asp-for="CompanyId" />
                <input type="hidden" asp-for="MembershipId" />
                <div class="form-row">
                    <div class="form-group" style="animation-delay: 0.1s">
                        <label asp-for="CompanyName" class="form-label">
                            <i class="fas fa-building"></i> Company Name
                        </label>
                        <input type="text" asp-for="CompanyName" class="form-control" id="companyName">
                    </div>
                    <div class="form-group" style="animation-delay: 0.1s">
                        <label asp-for="ContactPerson" class="form-label">
                            <i class="fas fa-building"></i> Contact Person
                        </label>
                        <input type="text" asp-for="ContactPerson" class="form-control" id="companyName">
                    </div>

                    <div class="form-group" style="animation-delay: 0.2s">
                        <label asp-for="Designation" class="form-label">
                            <i class="fas fa-user-tie"></i> Designation
                        </label>
                        <select asp-for="Designation" asp-items="@ViewBag.Designation" class="form-select" id="designation">
                            <option value="">Select your designation</option>

                        </select>
                    </div>


                    <div class="form-group" style="animation-delay: 0.3s">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-map-marker-alt"></i> Company Address
                        </label>
                        <input type="text" asp-for="Address" class="form-control" id="companyAddress">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group" style="animation-delay: 0.4s">
                        <label asp-for="CityId" class="form-label" for="city">
                            <i class="fas fa-city"></i> City
                        </label>
                        <select asp-for="CityId" asp-items="@ViewBag.City" class="form-select" id="city">
                            <option value="">Select your city</option>

                        </select>
                    </div>

                    <div class="form-group" style="animation-delay: 0.5s">
                        <label asp-for="FaxNumber" class="form-label">
                            <i class="fa-solid fa-fax"></i> Fax Number
                        </label>
                        <input type="text" asp-for="FaxNumber" class="form-control" id="faxNumber">
                    </div>


                </div>

                <div class="form-group" style="animation-delay: 0.6s">
                    <label asp-for="Description" class="form-label">
                        <i class="fas fa-file-alt"></i> Company Description
                    </label>
                    <textarea asp-for="Description" class="form-control" id="companyDescription"
                              rows="4"></textarea>
                </div>
                <div class="form-actions" style="display:flex; justify-content:flex-end; gap:15px; margin:20px;">
                    <button type="button" class="submit-btn" onclick="history.back()">
                        <i class="fas fa-arrow-left"></i>Back
                    </button>
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-save"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/Company/js/EditRegister.js"></script>


</body>
</html>



