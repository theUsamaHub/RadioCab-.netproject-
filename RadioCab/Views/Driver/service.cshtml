@model RadioCab.Models.DriverServiceVM

@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/driverlayout.cshtml";
}

<div class="services-container">
    <div class="services-header">
        <h2 class="services-title">
            <i class="fas fa-cogs me-2"></i>Services Management
        </h2>
    </div>

    <div class="row services-row g-4">
        <!-- ADD SERVICE -->
        <div class="col-lg-5 col-xl-4 form-column">
            <div class="service-form">
                <h5 class="mb-4" style="color: var(--primary);">
                    <i class="fas fa-plus-circle me-2"></i>Add Service
                </h5>

                <form asp-action="Service" method="post">
                    @Html.AntiForgeryToken()
                    <div class="text-danger mb-2" asp-validation-summary="All"></div>

                    <div class="mb-4">
                        <label class="form-label">Select Service *</label>
                        <select asp-for="DriverSerVal.ServiceId"
                                asp-items="@(new SelectList(Model.AvailableServices, "ServiceId", "ServiceName"))"
                                class="form-select">
                            <option value="">-- Select Service --</option>
                        </select>
                        <span asp-validation-for="DriverSerVal.ServiceId" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary-custom w-100">
                        <i class="fas fa-save me-2"></i>Add Service
                    </button>
                </form>
            </div>
        </div>

        <!-- SERVICE LIST -->
        <div class="col-lg-7 col-xl-8 table-column">
            <div class="services-table-container">
                @if (TempData["added"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["added"]
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-custom">
                        <thead>
                            <tr>
                                <th>Service Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DriverServices)
                            {
                                <tr>
                                    <td>@item.Service.ServiceName</td>
                                    <td>@item.Service.ServiceDescription</td>
                                    <td>
                                        <span class="badge bg-success">Active</span>
                                    </td>
                                    <td>
                                        <a asp-action="DelSer"
                                           asp-route-id="@item.DriverServiceId"
                                           class="btn btn-sm btn-danger"
                                           title="Remove Service">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
