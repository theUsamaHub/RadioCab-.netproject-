@model IEnumerable<RadioCab.Models.Payment>
@{
    ViewData["Title"] = "PaymentPage";
    Layout = "~/Views/Shared/driverlayout.cshtml";
}
<link rel="stylesheet" href="~/Company/css/PaymentPage.css" asp-append-version="true" />
<div class="container">
    <!-- Header -->
    <div class="header-container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2><i class="bi bi-credit-card-2-front me-2" style="color: var(--accent1);"></i>Payment Management System</h2>
                <p class="lead mb-0" style="color: black; font-size:15px;">Track and manage all payment transactions in one place</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-md-3">
            <div class="stats-card">
                <h6 class="text-muted">Total Payments</h6>
                <div class="stats-value">@ViewBag.Payments</div>
                <small style="color: var(--secondary);"><i class="bi bi-arrow-up me-1"></i>12% from last month</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h6 class="text-muted">Total Amount</h6>
                <div class="stats-value">$@ViewBag.TotalPayment</div>
                <small style="color: var(--secondary);"><i class="bi bi-arrow-up me-1"></i>8% from last month</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h6 class="text-muted">Completed</h6>
                <div class="stats-value">@ViewBag.PaidPayment</div>
                <small style="color: var(--primary);"><i class="bi bi-check-circle me-1"></i>75% success rate</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h6 class="text-muted">Pending</h6>
                <div class="stats-value">@ViewBag.PendingPayment</div>
                <small style="color: var(--accent2);"><i class="bi bi-clock me-1"></i>Needs attention</small>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-container">
        <div class="row">
            <div class="col-md-3">
                <label for="paymentForFilter" class="form-label">Payment For</label>
                <select class="form-select" id="paymentForFilter">
                    <option value="">All</option>
                    <option value="membership">Membership</option>
                    <option value="advertise">Advertise</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="paymentTypeFilter" class="form-label">Payment Type</label>
                <select class="form-select" id="paymentTypeFilter">
                    <option value="">All</option>
                    <option value="monthly">Monthly</option>
                    <option value="quarterly">Quarterly</option>
                    <option value="yearly">Yearly</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="statusFilter" class="form-label">Status</label>
                <select class="form-select" id="statusFilter">
                    <option value="">All</option>
                    <option value="paid">Paid</option>
                    <option value="pending">Pending</option>
                    <option value="rejected">Rejected</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary w-100"><i class="bi bi-funnel me-2"></i>Apply Filters</button>
            </div>
        </div>
    </div>

    <!-- Payment Table -->
    <div class="payment-table-container">
        <div class="table-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h3 class="mb-0">Recent Payments</h3>
                </div>
                <div class="col-md-6 text-end">
                    <div class="input-group" style="max-width: 300px; margin-left: auto;">
                        <input type="text" class="form-control" placeholder="Search payments...">
                        <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
        @if (!Model.Any())
        {
            <div class="empty-filter-message" id="emptyFilterMessage" style="display:none;">
                <i class="bi bi-search"></i>
                <h5>Try Searching</h5>
                <p class="text-muted">Use the filters above to search for specific payments</p>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Payment For</th>
                        <th>Payment Type</th>
                        <th>Payment Method</th>
                        <th>Transaction ID</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var p in Model)
                    {
                        <tr>
                            <td data-label="Payment For">
                                <div class="d-flex align-items-center">
                                    @if (p.PaymentPurpose == "Membership")
                                    {
                                        <div class="payment-for-icon membership-bg">
                                            <i class="bi bi-person-badge"></i>
                                        </div>
                                        <div>
                                            <div>@p.PaymentPurpose</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="payment-for-icon advertise-bg">
                                            <i class="bi bi-megaphone"></i>
                                        </div>
                                        <div>
                                            <div>@p.PaymentPurpose</div>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td data-label="Payment Type">@p.PaymentAmount.PaymentType</td>
                            <td data-label="Payment Method">

                                @if (p.PaymentMethod.MethodName == "Bank Transfer")
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="payment-method-icon bank-transfer-bg">
                                            <i class="bi bi-bank"></i>
                                        </div>
                                        @p.PaymentMethod.MethodName
                                    </div>
                                }
                                else if (p.PaymentMethod.MethodName == "JazzCash")
                                {
                                    <div class="d-flex align-items-center">

                                        <div class="payment-method-icon jazzcash-bg">
                                            <i class="bi bi-credit-card"></i>
                                        </div>
                                        @p.PaymentMethod.MethodName
                                    </div>
                                }
                                else if (p.PaymentMethod.MethodName == "Upaisa")
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="payment-method-icon upaisa-bg">
                                            <i class="bi bi-wallet"></i>
                                        </div>

                                        @p.PaymentMethod.MethodName
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="payment-method-icon easypaisa-bg">
                                            <i class="bi bi-phone"></i>
                                        </div>
                                        @p.PaymentMethod.MethodName
                                    </div>
                                }
                            </td>
                            <td data-label="Transaction ID">@p.TransactionId</td>
                            <td data-label="Amount">
                                <strong>@p.PaymentAmount.Amount</strong>
                            </td>
                            <td data-label="Status">
                                @if (p.PaymentStatus == "Pending")
                                {
                                    <span class="badge-status badge-pending">@p.PaymentStatus</span>
                                }
                                else if (p.PaymentStatus == "Rejected")
                                {
                                    <span class="badge-status badge-failed">@p.PaymentStatus</span>
                                }
                                else
                                {
                                    <span class="badge-status badge-completed">@p.PaymentStatus</span>
                                }


                            </td>
                            <td data-label="Action">
                                <a asp-action="ViewPaymentDriver" asp-controller="Driver" asp-route-id="@p.PaymentId">
                                    <button class="action-btn view-btn me-1" title="View Details"><i class="bi bi-eye"></i></button>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer Note -->
    <div class="text-center text-muted mb-5" style="color: var(--neutral-light) !important;">
        <p>Payment Management System &copy; 2023 | All transactions are securely processed</p>
    </div>
</div>
<script src="~/Company/js/PaymentPage.js"></script>


