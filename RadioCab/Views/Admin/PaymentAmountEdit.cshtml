<div class="payment-amounts-form">
    <div class="page-header">
        <h2><i class="fas fa-money-check-alt"></i> Payment Amount Management</h2>
    </div>

    <!-- Payment Amount Form -->
    <div class="form-container">
        <div class="form-header">
            <h3><i class="fas fa-edit"></i> Edit Payment Amount Details</h3>
        </div>
        <form class="payment-form" method="post" asp-action="PaymentAmountEdit" asp-controller="Admin">
            @Html.AntiForgeryToken()

            <!-- Hidden field for Id -->
            <input type="hidden" asp-for="paymentvalidate_form.PaymentAmountId" />

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors mb-3"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.MembershipId">
                        Membership Type <span class="required">*</span>
                    </label>
                    <select asp-for="paymentvalidate_form.MembershipId" class="form-select">
                        <option value="">Select Membership Type</option>
                        @foreach (var mem in Model.MembershipList)
                        {
                            <option value="@mem.MembershipId">@mem.MembershipName</option>
                        }
                    </select>
                    <span asp-validation-for="paymentvalidate_form.MembershipId" class="field-validation-error"></span>
                    <span class="form-hint">Select the membership type this amount applies to</span>
                </div>
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.DurationInMonths">
                        Duration (Months) <span class="required">*</span>
                    </label>
                    <input type="number" class="form-control"
                           placeholder="Enter duration in months"
                           min="1" max="120"
                           asp-for="paymentvalidate_form.DurationInMonths">
                    <span asp-validation-for="paymentvalidate_form.DurationInMonths" class="field-validation-error"></span>
                    <span class="form-hint">Number of months for this payment plan (1-120)</span>
                </div>
            </div>

            <div class="form-row three-columns">
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.EntityType">
                        Entity Type <span class="required">*</span>
                    </label>
                    <input type="text" class="form-control"
                           placeholder="e.g., Individual, Company, Organization"
                           maxlength="50"
                           asp-for="paymentvalidate_form.EntityType">
                    <span asp-validation-for="paymentvalidate_form.EntityType" class="field-validation-error"></span>
                    <span class="form-hint">Type of entity (max 50 characters)</span>
                </div>
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.PaymentType">
                        Payment Type <span class="required">*</span>
                    </label>
                    <input type="text" class="form-control"
                           placeholder="e.g., Monthly, Quarterly, Annual"
                           maxlength="50"
                           asp-for="paymentvalidate_form.PaymentType">
                    <span asp-validation-for="paymentvalidate_form.PaymentType" class="field-validation-error"></span>
                    <span class="form-hint">Payment frequency/type (max 50 characters)</span>
                </div>
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.Amount">
                        Amount <span class="required">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control"
                               placeholder="0.00"
                               min="0" step="0.01"
                               pattern="^\d+(\.\d{1,2})?$"
                               asp-for="paymentvalidate_form.Amount">
                    </div>
                    <span asp-validation-for="paymentvalidate_form.Amount" class="field-validation-error"></span>
                    <span class="form-hint">Payment amount in USD</span>
                </div>
                <div class="form-group">
                    <label>
                        IsAcive
                    </label>
                    <div class="input-group">
                        <select asp-for="paymentvalidate_form.IsActive" class="form-select">
                            <option value="">Select Status</option>
                                <option value="true">Active</option>
                            <option value="false">InActive</option>
                        </select>
                    </div>
                </div>



            </div>

            <div class="form-actions">
                <a asp-action="PaymentAmountList" asp-controller="Admin" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-submit">Update Payment Amount</button>
            </div>
        </form>
    </div>
</div>



<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

