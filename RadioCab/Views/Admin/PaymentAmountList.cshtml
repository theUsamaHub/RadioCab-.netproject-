<div class="payment-amounts-list">
    <div class="page-header">
        <h2><i class="fas fa-money-check-alt"></i> Payment Amounts</h2>
        <a asp-action ="PaymentAmountAdd" asp-controller="Admin" class="btn-add-payment">
            <i class="fas fa-plus-circle"></i> Add New Payment
        </a>
    </div>

    <!-- Table Controls -->
    <div class="table-controls">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" placeholder="Search payment amounts...">
        </div>
        <div class="filter-group">
            <select id="membershipFilter">
                <option value="all">All Memberships</option>
                @foreach (var mem in Model.MembershipList)
                {
                    <option value="@mem.MembershipName.ToLower()">@mem.MembershipName</option>
                }
            </select>

        </div>
    </div>

    <!-- Payment Amounts Table -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="payment-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Membership</th>
                        <th>Entity Type</th>
                        <th>Payment Type</th>
                        <th>Duration</th>
                        <th>Amount</th>
                        <th>IsActive</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="paymentsTableBody">
                     @foreach (var item in Model.paymentAmount_list)
                    {

                    <tr>
                            <td><strong>#PA @item.PaymentAmountId</strong></td>
                        <td>
                            <span class="membership-badge basic">
                                <i class="fas fa-user"></i>
                                    @item.Membership.MembershipName
                            </span>
                        </td>
                        <td>
                            <span class="entity-badge">
                                <i class="fas fa-user"></i>
                                    @item.EntityType
                            </span>
                        </td>
                            <td>@item.PaymentType</td>
                        <td>
                            <span class="duration-display">
                                    <i class="far fa-calendar-alt"></i> @item.DurationInMonths
                            </span>
                        </td>
                        <td class="amount-display">
                                <span class="currency">$</span>@item.Amount
                        </td>             
                                @if(item.IsActive == true) {
                                <td>Active</td>
                                }
                                else
                                {
                               <td> InActive</td>
                                }
                        <td>
                            <div class="action-buttons">
                                    <a asp-action="PaymentAmountEdit" asp-controller="Admin" asp-route-id="@item.PaymentAmountId" class="btn-action btn-edit" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                    <a href="javascript:void(0);" class="btn-action btn-delete js-delete-user" data-id="@item.PaymentAmountId" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>


</div>
<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set active navigation
        document.querySelector('[data-page="paymentamount"]').classList.add('active');

        document.querySelectorAll('.js-delete-user').forEach(btn => {
            btn.addEventListener('click', function() {
                const paymentId = this.dataset.id;
                const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]').value;

                Swal.fire({
                    title: 'Are you sure?',
                    text: 'This payment amount will be permanently deleted!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#e74c3c',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete'
                }).then((result) => {
                    if (!result.isConfirmed) return;

                    Swal.fire({
                        title: 'Deleting...',
                        text: 'Please wait',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    // Create form data properly
                    const formData = new FormData();
                    formData.append('id', paymentId);
                    formData.append('__RequestVerificationToken', token);

                    fetch('/Admin/DeletePyamountAjax', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token
                        },
                        body: new URLSearchParams({
                            'id': paymentId,
                            '__RequestVerificationToken': token
                        })
                    })
                    .then(res => {
                        if (!res.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return res.json();
                    })
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Deleted!',
                                text: 'Payment amount has been deleted.'
                            });
                            // Remove row from table
                            btn.closest('tr').remove();
                        } else {
                            Swal.fire('Error', data.message || 'Failed to delete', 'error');
                        }
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                        Swal.fire('Error', 'This payment amount is already in use by transactions. You can’t delete it. If you don’t want it to appear, please deactivate it.', 'error');
                    });
                });
            });
        });

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('#paymentsTableBody tr');

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(searchTerm) ? '' : 'none';
                });
            });
        }

        // Filter functionality
        const membershipFilter = document.getElementById('membershipFilter');
        if (membershipFilter) {
            membershipFilter.addEventListener('change', filterTable);
        }

        function filterTable() {
            const membershipFilterValue = document.getElementById('membershipFilter').value;
            const rows = document.querySelectorAll('#paymentsTableBody tr');

            rows.forEach(row => {
                const membershipCell = row.cells[1];
                if (membershipCell) {
                    const membershipText = membershipCell.textContent.toLowerCase();
                    const membershipBadge = membershipCell.querySelector('.membership-badge');
                    let membershipValue = '';

                    if (membershipBadge) {
                        // Get the text content without the icon
                        membershipValue = membershipBadge.textContent.trim().toLowerCase();
                    } else {
                        membershipValue = membershipText.toLowerCase();
                    }

                    const showByMembership = membershipFilterValue === 'all' ||
                                           membershipValue.includes(membershipFilterValue.toLowerCase());

                    row.style.display = showByMembership ? '' : 'none';
                }
            });
        }
    });
</script>
