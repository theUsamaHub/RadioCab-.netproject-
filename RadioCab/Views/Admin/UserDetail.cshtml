@model RadioCab.Models.CDVM

@{
    ViewData["Title"] = "User Detail";
    Layout = "~/Views/Shared/admin.cshtml";
}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --success-color: #27ae60;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
        }

        /* body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        } */

        .user-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            margin-bottom: 30px;
            overflow: hidden;
        }

        .user-header {
            background: linear-gradient(135deg, var(--primary-color), #1a252f);
            color: white;
            padding: 25px 30px;
        }

  

        .status-badge {
            padding: 8px 25px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-active {
            background: linear-gradient(135deg, var(--success-color), #2ecc71);
            color: white;
            box-shadow: 0 3px 10px rgba(39, 174, 96, 0.3);
        }

        .status-pending {
            background: linear-gradient(135deg, var(--warning-color), #f1c40f);
            color: white;
            box-shadow: 0 3px 10px rgba(243, 156, 18, 0.3);
        }

        .status-blocked {
            background: linear-gradient(135deg, var(--danger-color), #c0392b);
            color: white;
            box-shadow: 0 3px 10px rgba(231, 76, 60, 0.3);
        }

        .info-section {
            padding: 30px;
        }

        .info-label {
            color: #7f8c8d;
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .info-value {
            color: #2c3e50;
            font-size: 16px;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .section-title {
            color: var(--primary-color);
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .action-btn {
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .action-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .btn-activate {
            background: linear-gradient(135deg, var(--success-color), #2ecc71);
            color: white;
        }

        .btn-block {
            background: linear-gradient(135deg, var(--danger-color), #c0392b);
            color: white;
        }

        .btn-back {
            background-color: #95a5a6;
            color: white;
        }

        .info-box {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .activity-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid var(--secondary-color);
        }

        /* media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            } */
        }
    </style>

    <div class="container-fluid">
        <!-- Back Navigation -->
        <div class="row mb-4">
            <div class="col-12">
                <button class="btn action-btn btn-back" onclick="window.history.back()">
                    <i class="bi bi-arrow-left"></i> Back to Users
                </button>
            </div>
        </div>

        <!-- User Details Card -->
        <div class="user-card">
            <!-- Header Section -->
            <div class="user-header">
                <div class="row align-items-center">                 
                    <div class="col-md-6">
                    <h2 class="mb-2">User @Model.Single_User.FullName</h2>
                        <p class="mb-3">
                            <i class="bi bi-person-badge"></i>
                            User ID: <strong>USR-@Model.Single_User.UserID</strong>
                        </p>
                        <div class="d-flex align-items-center gap-3">
                        @if (Model.Single_User.Status == "Active")
                        {
                            <span class="status-badge status-active">Active</span>
                        }
                        else if (Model.Single_User.Status == "Pending")
                        {
                            <span class="status-badge status-pending">Pending</span>
                        }
                        else
                        {
                            <span class="status-badge status-blocked">Blocked</span>
                        }
                            <span class="text-light">
                                <i class="bi bi-calendar me-1"></i>
                                Joined: <strong>@Model.Single_User.CreatedAt</strong>
                            </span>
                        </div>
                    </div>                    
                </div>
            </div>

            <!-- Body Section -->
            <div class="info-section">
                <div class="row">
                    <!-- Left Column: Personal Information -->
                    <div class="col-lg-12">
                        <!-- Personal Information -->
                        <div class="info-box">
                            <h5 class="section-title">
                                <i class="bi bi-person-lines-fill me-2"></i>Personal Information
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="info-label">Full Name</div>
                                    <div class="info-value">@Model.Single_User.FullName</div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-label">Email Address</div>
                                    <div class="info-value">@Model.Single_User.Email</div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-label">Phone Number</div>
                                    <div class="info-value">+@Model.Single_User.Phone</div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-label">Account Status</div>
                                    <div class="info-value">
                                        @if(Model.Single_User.Status == "Active")
                                        {
                                            <span class="status-badge status-active">Active</span>
                                        }
                                        else if(Model.Single_User.Status == "Pending")
                                        {
                                            <span class="status-badge status-pending">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-blocked">Blocked</span>
                                        }
                                       
                                    </div>
                                </div>
                            </div>
                        </div>

                      
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
                document.addEventListener('DOMContentLoaded', function() {
        // Set active navigation
        document.querySelector('[data-page="user"]').classList.add('active');
    });
    </script>
