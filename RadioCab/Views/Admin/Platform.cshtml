@model RadioCab.Models.PlatformServiceVM

@{
    ViewData["Title"] = "Platform Service";
    Layout = "~/Views/Shared/admin.cshtml";
}
<link href="~/css/platform.css" rel="stylesheet" />


<div class="platform-services-page">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h2 mb-2">Platform Services</h1>
                <p class="text-muted mb-0">Manage all platform-wide services available to companies and users</p>
            </div>
            <div class="col-md-4 text-md-end">
                <button class="btn btn-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#addServiceModal"
                        data-show="@(ViewBag.OpenAddModal == true ? "true" : "false")">
                    <i class="fas fa-plus-circle me-2"></i>Add New Service
                </button>
            </div>
        </div>
    </div>

    @if (TempData["PlatformServiceAddMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["PlatformServiceAddMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["PlatformServiceEditMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["PlatformServiceEditMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- Services Table -->
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">All Platform Services</h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th width="60">ID</th>
                            <th>Service Name</th>
                            <th>Description</th>
                            <th width="100">Status</th>
                            <th width="140" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        

                        @foreach(var p in Model.PlatformService_list){ 
                        <tr>
                            <td class="fw-bold">PS @p.ServiceId</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h6 class="mb-0">@p.ServiceName</h6>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="service-description">
                                    @p.ServiceDescription
                                </div>
                            </td>
                            <td>
                                @if(p.isActive == true){
                                    <span class="badge bg-success">Active</span>
                                }
                                else{
                                    <span class="badge bg-warning">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <button class="btn btn-sm btn-outline-primary view-service"
                                                data-service-id="@p.ServiceId"
                                                data-service-name="@p.ServiceName"
                                            data-service-description="@p.ServiceDescription"
                                                data-service-status="@(p.isActive == true ? "Active" : "Inactive")">
                                        <i class="fas fa-eye"></i>
                                    </button>                              
                                        <button class="btn btn-sm btn-outline-warning edit-service"
                                                data-id="@p.ServiceId"
                                                data-name="@p.ServiceName"
                                                data-original-name="@p.ServiceName" 
                                                data-description="@p.ServiceDescription"
                                                data-status="@(p.isActive == true ? " Active" : "Inactive" )">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <a href="javascript:void(0);" class="btn btn-sm btn-outline-danger js-delete-user" data-id="@p.ServiceId" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addServiceModalLabel">
                    <i class="fas fa-plus-circle me-2"></i>Add New Service
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addServiceForm" asp-action="Platform" asp-controller="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="mb-4">
                        <label for="serviceName" asp-for="Platform_form.ServiceName" class="form-label fw-medium">
                            <i class="fas fa-heading me-2 text-primary"></i>Service Name
                        </label>
                        <input type="text"
                               class="form-control"
                               id="serviceName"
                               placeholder="Enter service name (e.g., Premium Ride Booking)"
                               asp-for="Platform_form.ServiceName">
                        <div class="form-text">Choose a clear, descriptive name for the service</div>
                    </div>

                    <div class="mb-4">
                        <label for="serviceDescription" asp-for="Platform_form.ServiceDescription" class="form-label fw-medium">
                            <i class="fas fa-align-left me-2 text-primary"></i>Service Description
                        </label>
                        <textarea class="form-control"
                                  id="serviceDescription"
                                  rows="4"
                                  placeholder="Describe the service features, benefits, and usage..." asp-for="Platform_form.ServiceDescription"></textarea>
                        <div class="form-text">Provide detailed information about what this service offers</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Platform_form.IsActive" class="form-label fw-medium">
                            <i class="fas fa-toggle-on me-2 text-primary"></i>Service Status
                        </label>
                            <select class="form-select" asp-for="Platform_form.IsActive">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                      
                        <div class="form-text">
                            <span class="text-success">
                                <i class="fas fa-check-circle me-1"></i>Active services are visible to companies
                            </span>
                            <br>
                            <span class="text-secondary">
                                <i class="fas fa-eye-slash me-1"></i>Inactive services are hidden
                            </span>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <div class="d-flex">
                            <i class="fas fa-info-circle me-3 mt-1 text-primary"></i>
                            <div>
                                <small class="d-block">Service ID will be auto-generated (e.g., PS002)</small>
                                <small class="d-block mt-1">Created date will be set to current date</small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="submit" form="addServiceForm" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Service
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Platform Service Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>Edit Service
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="editServiceForm"
                  asp-action="EditPlatform"
                  asp-controller="Admin"
                  method="post"
                  data-show="@(ViewBag.OpenEditModal == true ? "true" : "false")">
                @Html.AntiForgeryToken()

                <div class="modal-body">

                    <!-- ✅ Validation summary INSIDE modal -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Platform_form.ServiceId" id="editServiceId" />

                    <div class="mb-3">
                        <label asp-for="Platform_form.ServiceName" class="form-label">Service Name</label>
                        <input asp-for="Platform_form.ServiceName"
                               class="form-control"
                               id="editServiceName" />
                        <span asp-validation-for="Platform_form.ServiceName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Platform_form.ServiceDescription" class="form-label">Description</label>
                        <textarea asp-for="Platform_form.ServiceDescription"
                                  class="form-control"
                                  id="editServiceDescription"
                                  rows="4"></textarea>
                        <span asp-validation-for="Platform_form.ServiceDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Platform_form.IsActive" class="form-label">Status</label>
                        <select asp-for="Platform_form.IsActive" class="form-select" id="editServiceStatus">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <span asp-validation-for="Platform_form.IsActive" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Update Service
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>


<!-- View Service Modal -->
<div class="modal fade" id="viewServiceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Service Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="service-detail-header mb-4">
                    <div class="d-flex align-items-center">
                        <div class="service-detail-icon">
                            <i class="fas fa-taxi"></i>
                        </div>
                        <div class="ms-3">
                            <h4 id="modalServiceName" class="mb-1">Service Name</h4>
                            <div class="d-flex align-items-center">
                                <span id="modalServiceStatus" class="badge me-2">Status</span>
                                <small class="text-muted">ID: <span id="modalServiceId">PS001</span></small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="service-detail-content">
                    <h6 class="mb-3">Description</h6>
                    <div class="service-description-box p-3 mb-4">
                        <p id="modalServiceDescription" class="mb-0">Service description will appear here...</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small mb-1">Created Date</label>
                            <p class="mb-0 fw-medium">January 15, 2024</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small mb-1">Last Updated</label>
                            <p class="mb-0 fw-medium">February 28, 2024</p>
                        </div>       
                    </div>
   
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/platform-services.js"></script>


@if (ViewBag.OpenEditModal != null && (bool)ViewBag.OpenEditModal)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new bootstrap.Modal(document.getElementById('editServiceModal')).show();
        });
    </script>
}


@if (ViewBag.OpenAddModal != null && (bool)ViewBag.OpenAddModal)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var addModal = new bootstrap.Modal(document.getElementById('addServiceModal'));
            addModal.show();
        });
    </script>
}










