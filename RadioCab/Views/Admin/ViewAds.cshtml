@model RadioCab.Models.CDVM
@{
    ViewData["Title"] = "Advertisement Details";
    Layout = "~/Views/Shared/admin.cshtml";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    :root {
        --white: #FFFFFF;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --orange: #fca311;
        --orange-hover: #e3940f;
        --dark-blue: #14213d;
        --dark-blue-light: #1e2a4a;
        --black: #000000;
        --success-color: #06d6a0;
        --warning-color: #ffd166;
        --danger-color: #ef476f;
    }

    .ad-detail-container {
        padding: 20px;
        background: var(--light-gray);
        min-height: calc(100vh - 70px);
    }

    .compact-card {
        background: var(--white);
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(20, 33, 61, 0.08);
        border: 1px solid var(--medium-gray);
        margin-bottom: 20px;
    }

    .ad-header {
        background: linear-gradient(135deg, var(--dark-blue), var(--dark-blue-light));
        color: var(--white);
        padding: 15px;
        border-radius: 8px 8px 0 0;
    }

    .ad-image-container {
        max-height: 300px;
        overflow: hidden;
        border-radius: 6px;
        margin-bottom: 15px;
    }

    .ad-image {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .status-pending {
        background: rgba(255, 209, 102, 0.15);
        color: #856404;
        border: 1px solid rgba(255, 209, 102, 0.3);
    }

    .status-approved {
        background: rgba(6, 214, 160, 0.15);
        color: #0f5132;
        border: 1px solid rgba(6, 214, 160, 0.3);
    }

    .status-rejected {
        background: rgba(239, 71, 111, 0.15);
        color: #721c24;
        border: 1px solid rgba(239, 71, 111, 0.3);
    }

    .active-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .active-badge.active {
            background: rgba(6, 214, 160, 0.15);
            color: #0f5132;
            border: 1px solid rgba(6, 214, 160, 0.3);
        }

        .active-badge.inactive {
            background: rgba(108, 117, 125, 0.15);
            color: #6c757d;
            border: 1px solid rgba(108, 117, 125, 0.3);
        }

    .advertiser-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .advertiser-badge.company {
            background: rgba(20, 33, 61, 0.1);
            color: var(--dark-blue);
            border: 1px solid rgba(20, 33, 61, 0.2);
        }

        .advertiser-badge.driver {
            background: rgba(17, 138, 178, 0.1);
            color: #118ab2;
            border: 1px solid rgba(17, 138, 178, 0.2);
        }

    .info-label {
        color: #6c757d;
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 2px;
    }

    .info-value {
        color: var(--dark-blue);
        font-size: 0.9rem;
        font-weight: 600;
    }

    .section-title {
        color: var(--dark-blue);
        font-size: 1rem;
        font-weight: 700;
        border-bottom: 2px solid var(--orange);
        padding-bottom: 6px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    .btn-primary {
        background-color: var(--dark-blue);
        border-color: var(--dark-blue);
    }

        .btn-primary:hover {
            background-color: var(--dark-blue-light);
            border-color: var(--dark-blue-light);
        }

    .btn-outline-primary {
        color: var(--dark-blue);
        border-color: var(--dark-blue);
    }

        .btn-outline-primary:hover {
            background-color: var(--dark-blue);
            border-color: var(--dark-blue);
            color: var(--white);
        }

    .btn-success {
        background-color: var(--success-color);
        border-color: var(--success-color);
    }

    .btn-danger {
        background-color: var(--danger-color);
        border-color: var(--danger-color);
    }

    .btn-warning {
        background-color: var(--warning-color);
        border-color: var(--warning-color);
        color: #856404;
    }

    .back-btn {
        background-color: var(--medium-gray);
        color: var(--dark-blue);
        border: 1px solid #dee2e6;
        font-size: 0.85rem;
    }

    .payment-info {
        background: var(--light-gray);
        border-radius: 6px;
        padding: 15px;
    }

    .date-range {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 10px 0;
    }

    .date-item {
        background: var(--white);
        border: 1px solid var(--medium-gray);
        border-radius: 6px;
        padding: 10px;
        flex: 1;
        text-align: center;
    }

    .date-label {
        font-size: 0.75rem;
        color: #6c757d;
        margin-bottom: 2px;
    }

    .date-value {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--dark-blue);
    }

    .ad-description {
        line-height: 1.6;
        color: #495057;
    }

    /* 2@media (max-width: 768px) {
        .ad-detail-container {
            padding: 15px;
        }

        .date-range {
            flex-direction: column;
        }

        .btn-group {
            flex-wrap: wrap;
            gap: 5px;
        } */
    }
</style>

<div class="ad-detail-container">
    <!-- Back Navigation -->
    <div class="row mb-3">
        <div class="col-12">
            <button onclick="window.history.back()" class="btn btn-sm back-btn">
                <i class="bi bi-arrow-left"></i> Back to Ads
            </button>
        </div>
    </div>

    <!-- Advertisement Details Card -->
    <div class="compact-card">
        <!-- Header -->
        <div class="ad-header">
            <div class="row align-items-center g-2">
                <div class="col">
                    <div class="d-flex flex-column">
                        <h5 class="mb-2">@Model.single_ad.Title</h5>
                        <div class="d-flex align-items-center flex-wrap gap-2">
                            <span class="badge bg-light text-dark">
                                <i class="bi bi-tag"></i> AD#@Model.single_ad.AdvertisementId
                            </span>
                            <span class="advertiser-badge @Model.single_ad.AdvertiserType.ToLower()">
                                <i class="bi @(Model.single_ad.AdvertiserType == "Company" ? "bi-building" : "bi-car-front")"></i>
                                @Model.single_ad.AdvertiserType #@Model.single_ad.AdvertiserId
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-auto">
                    <div class="d-flex flex-column gap-2 align-items-end">
                        <span class="status-badge @Model.single_ad.ApprovalStatus.ToLower()">
                            @if (Model.single_ad.ApprovalStatus == "Pending")
                            {
                                <i class="bi bi-clock-history"></i>
                            }
                            else if (Model.single_ad.ApprovalStatus == "Approved")
                            {
                                <i class="bi bi-check-circle"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-circle"></i>
                            }
                            @Model.single_ad.ApprovalStatus
                        </span>
                        <span class="active-badge @(Model.single_ad.IsActive ? "active" : "inactive")">
                            <i class="bi @(Model.single_ad.IsActive ? "bi-play-circle" : "bi-pause-circle")"></i>
                            @(Model.single_ad.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Body -->
        <div class="p-3">
            <!-- Advertisement Image -->
            @if (!string.IsNullOrEmpty(Model.single_ad.AdImage))
            { 
                <div class="ad-image-container mb-3">
                    <img src="@Model.single_ad.AdImage" alt="@Model.single_ad.Title" class="ad-image">
                </div>
            }

            <div class="row g-3">
                <!-- Left Column: Details -->
                <div class="col-lg-8">
                    <div class="mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-card-text"></i> Description
                        </h6>
                        <div class="ad-description small">
                            @Model.single_ad.Description
                        </div>
                    </div>
                     
                    <!-- Date Range -->
                    <div class="mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-calendar-range"></i> Campaign Period
                        </h6>
                        <div class="date-range">
                            <div class="date-item">
                                <div class="date-label">Start Date</div>
                                <div class="date-value">@Model.single_ad.StartDate.ToString("dd MMM yyyy")</div>
                            </div>
                            <i class="bi bi-arrow-right text-muted"></i>
                            <div class="date-item">
                                <div class="date-label">End Date</div>
                                <div class="date-value">@Model.single_ad.EndDate.ToString("dd MMM yyyy")</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Payment Information -->
                    <div class="payment-info mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-credit-card"></i> Payment Details
                        </h6>
                        <div class="mb-2">
                            <div class="info-label">Payment Status</div>
                            <div class="info-value">
                                <span class="status-badge @Model.single_ad.Payment?.PaymentStatus.ToLower()">
                                    @Model.single_ad.Payment?.PaymentStatus
                                </span>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="info-label">Amount</div>
                            <div class="info-value">
                                $@Model.single_ad.Payment.PaymentAmount.Amount
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="info-label">Payment Method</div>
                            <div class="info-value">
                                @Model.single_ad.Payment?.PaymentMethod?.MethodName
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="info-label">Paid By</div>
                            <div class="info-value">
                                @Model.single_ad.Payment?.User?.FullName
                            </div>
                        </div>
                    </div>

                    <!-- Advertiser Info -->
                    <div class="payment-info mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-info-circle"></i> Advertiser Info
                        </h6>
                        <div class="mb-2">
                            <div class="info-label">Type</div>
                            <div class="info-value">@Model.single_ad.AdvertiserType</div>
                        </div>
                        <div class="mb-2">
                            <div class="info-label">Advertiser ID</div>
                            <div class="info-value">#@Model.single_ad.AdvertiserId</div>
                        </div>
                        <div class="mb-2">
                            <div class="info-label">Created</div>
                            <div class="info-value">@Model.single_ad.CreatedAt.ToString("dd MMM yyyy HH:mm")</div>
                        </div>
                    </div>

                
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information (Optional) -->
    <div class="row g-3">

        <!-- Activity Log -->
        <div class="col-lg-6">
            <div class="compact-card p-3">
                <h6 class="section-title">
                    <i class="bi bi-clock-history"></i> Recent Activity
                </h6>
                <div class="list-group list-group-flush small">
                    <div class="list-group-item d-flex justify-content-between align-items-center py-2">
                        <div>
                            <i class="bi bi-plus-circle text-success me-2"></i>
                            <span>Advertisement created</span>
                        </div>
                        <span class="text-muted">@Model.single_ad.CreatedAt.ToString("dd MMM HH:mm")</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center py-2">
                        <div>
                            <i class="bi bi-credit-card text-primary me-2"></i>
                            <span>Payment @Model.single_ad.Payment?.PaymentStatus</span>
                        </div>
                        <span class="text-muted">@Model.single_ad.Payment?.PaymentDate.ToString("dd MMM HH:mm")</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center py-2">
                        <div>
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <span>Status: @Model.single_ad.ApprovalStatus</span>
                        </div>
                        <span class="text-muted">Today</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
        document.addEventListener('DOMContentLoaded', function() {

        document.querySelector('[data-page="ads"]').classList.add('active');

    });
</script>
