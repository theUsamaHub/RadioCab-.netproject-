    /* Current status display */
    .current-status {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px;
        background-color: var(--white);
        border-radius: 6px;
        border: 1px solid var(--medium-gray);
        margin-bottom: 20px;
    }

    .current-status-label {
        font-weight: 500;
        color: var(--dark-blue);
        font-size: 14px;
    }
</style>

<div class="edit-ads-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-edit me-2"></i>Edit Advertisement</h1>
        <a asp-action="Ads" asp-controller="Admin" class="back-button">
            <i class="fas fa-arrow-left"></i> Back to Ads
        </a>
    </div>



    <!-- Advertisement Details (Read-only) -->
    <div class="ad-details-grid">
        <!-- Current Status Display -->
        <div class="detail-group">
            <span class="detail-label">Current Status</span>
            <div class="current-status">
                @if (Model.single_ad.ApprovalStatus == "Pending")
                {
                    <span class="status-badge badge-pending">Pending</span>
                }
                else if (Model.single_ad.ApprovalStatus == "Approved")
                {
                    <span class="status-badge badge-approved">Approved</span>
                }
                else
                {
                    <span class="status-badge badge-rejected">Rejected</span>
                }
                <span class="current-status-label">@Model.single_ad.ApprovalStatus</span>
            </div>
        </div>

        <!-- Advertiser Type -->
        <div class="detail-group">
            <span class="detail-label">Advertiser Type</span>
            <div class="detail-value">@Model.single_ad.AdvertiserType</div>
        </div>

        <!-- Start Date -->
        <div class="detail-group">
            <span class="detail-label">Start Date</span>
            <div class="detail-value">@Model.single_ad.StartDate.ToString("MMM dd, yyyy")</div>
        </div>

        <!-- End Date -->
        <div class="detail-group">
            <span class="detail-label">End Date</span>
            <div class="detail-value">@Model.single_ad.EndDate.ToString("MMM dd, yyyy")</div>
        </div>


        <!-- User Email -->
        <div class="detail-group">
            <span class="detail-label">Advertiser Email</span>
            <div class="detail-value">@Model.single_ad.Payment.User.Email</div>
        </div>

        <!-- Active Status -->
        <div class="detail-group">
            <span class="detail-label">Payment Status</span>
            <div class="detail-value">
                @if (Model.single_ad.Payment.PaymentStatus == "Approved")
                {
                    <span class="badge badge-approved">Approved</span>
                }
                else
                {
                    <span class="badge badge-rejected">@Model.single_ad.Payment.PaymentStatus</span>
                }
            </div>
        </div>

        <!-- Ad Image -->
        @if (!string.IsNullOrEmpty(Model.single_ad.AdImage))
        {
            <div class="ad-image-container">
                <span class="detail-label">Advertisement Image</span>
                <div>
                    <img src="@Model.single_ad.AdImage"
                         alt="Ad Image"
                         class="ad-image-preview"
                         onerror="this.src='https://via.placeholder.com/300x200?text=Image+Not+Found'" />
                </div>
            </div>
        }
    </div>

    <!-- Status Update Form -->
    <div class="status-form-container">
        <div class="form-header">
            <i class="fas fa-cog"></i>
            <h3>Update Approval Status</h3>
        </div>

        <form asp-action="EditAd" asp-controller="Admin" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="single_ad.AdvertisementId" />


            <div class="form-group">
                <label for="ApprovalStatus">Select New Status *</label>
                <select asp-for="single_ad.ApprovalStatus" class="form-select" required>
                    <option value="">-- Select Status --</option>
                    <option value="Pending" class="status-option-pending">Pending</option>
                    <option value="Approved" class="status-option-approved">Approved</option>
                    <option value="Rejected" class="status-option-rejected">Rejected</option>
                </select>
                <small class="text-muted">Changing status will send an email notification to the advertiser.</small>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Status
                </button>
            </div>
        </form>
    </div>
</div>

