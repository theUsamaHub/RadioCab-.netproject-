@model RadioCab.Models.Feedback
@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    :root {
        --white: #FFFFFF;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --orange: #fca311;
        --orange-hover: #e3940f;
        --dark-blue: #14213d;
        --dark-blue-light: #1e2a4a;
        --black: #000000;
    }

    .page-header {
        background: var(--dark-blue);
        color: white;
        border-radius: 8px;
        padding: 15px 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .page-header h1 {
            font-weight: 600;
            margin: 0;
            font-size: 20px;
        }

        .page-header .badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 4px 12px;
            font-size: 12px;
        }

    .compact-card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        margin-bottom: 15px;
        background: var(--white);
    }

        .compact-card .card-header {
            background: var(--light-gray);
            border-bottom: 1px solid #dee2e6;
            padding: 12px 15px;
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-blue);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .compact-card .card-body {
            padding: 15px;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
        margin-bottom: 15px;
    }

    .info-item {
        margin-bottom: 8px;
    }

    .info-label {
        font-size: 11px;
        font-weight: 600;
        color: var(--dark-blue);
        text-transform: uppercase;
        letter-spacing: 0.3px;
        margin-bottom: 4px;
        opacity: 0.8;
    }

    .info-value {
        background: var(--light-gray);
        border: 1px solid var(--medium-gray);
        border-radius: 6px;
        padding: 8px 12px;
        font-size: 14px;
        min-height: 36px;
        display: flex;
        align-items: center;
        word-break: break-word;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .status-new {
        background: #e3f2fd;
        color: #0d47a1;
    }

    .status-inprogress {
        background: #fff3e0;
        color: #e65100;
    }

    .status-resolved {
        background: #e8f5e9;
        color: #1b5e20;
    }

    .status-closed {
        background: #f5f5f5;
        color: #424242;
    }

    .form-section {
        margin-bottom: 15px;
    }

    .form-label {
        font-size: 12px;
        font-weight: 600;
        color: var(--dark-blue);
        margin-bottom: 6px;
    }

    .required::after {
        content: " *";
        color: #dc3545;
    }

    .form-control-sm {
        border: 1px solid #ced4da;
        border-radius: 6px;
        padding: 8px 12px;
        font-size: 14px;
    }

        .form-control-sm:focus {
            border-color: var(--orange);
            box-shadow: 0 0 0 0.2rem rgba(252, 163, 17, 0.25);
        }

    .form-textarea {
        min-height: 80px;
        resize: vertical;
    }

    .char-count {
        font-size: 11px;
        color: #6c757d;
        text-align: right;
        margin-top: 4px;
    }

    .description-box {
        background: var(--light-gray);
        border: 1px solid var(--medium-gray);
        border-radius: 6px;
        padding: 12px;
        font-size: 14px;
        line-height: 1.5;
        min-height: 80px;
        white-space: pre-wrap;
        word-break: break-word;
        margin-top: 5px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        padding-top: 15px;
        border-top: 1px solid var(--medium-gray);
        margin-top: 20px;
    }

    .btn-sm-custom {
        padding: 6px 16px;
        font-size: 13px;
        font-weight: 500;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-orange {
        background: var(--orange);
        border: 1px solid var(--orange);
        color: white;
    }

        .btn-orange:hover {
            background: var(--orange-hover);
            border-color: var(--orange-hover);
            color: white;
        }

    .btn-outline-blue {
        background: transparent;
        border: 1px solid var(--dark-blue);
        color: var(--dark-blue);
    }

        .btn-outline-blue:hover {
            background: var(--dark-blue);
            color: white;
        }

    .timestamp {
        font-size: 11px;
        color: #6c757d;
        margin-top: 2px;
        display: block;
    }

    .alert-compact {
        padding: 8px 12px;
        font-size: 13px;
        margin-bottom: 15px;
        border-radius: 6px;
    }

    .empty-value {
        color: #adb5bd;
        font-style: italic;
    }

    .feedback-type {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
        background: #e9ecef;
        color: #495057;
    }

    @@media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
            gap: 8px;
        }

        .page-header {
            padding: 12px 15px;
        }

        .compact-card .card-body {
            padding: 12px;
        }
    }
</style>

<div class="container-fluid py-3">
    <!-- Compact Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-edit me-2"></i>Edit Feedback</h1>
            <span class="badge">ID: @Model.FeedbackId</span>
        </div>
    </div>

    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-compact alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-compact alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="ComplainEdit" method="post" id="feedbackForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="FeedbackId" />

        <!-- Feedback Details Card -->
        <div class="compact-card">
            <div class="card-header">
                <i class="fas fa-info-circle"></i> Feedback Details
            </div>
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Name</div>
                        <div class="info-value @(string.IsNullOrEmpty(Model.Name) ? "empty-value" : "")">
                            @(string.IsNullOrEmpty(Model.Name) ? "Not provided" : Model.Name)
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email</div>
                        <div class="info-value @(string.IsNullOrEmpty(Model.Email) ? "empty-value" : "")">
                            @(string.IsNullOrEmpty(Model.Email) ? "Not provided" : Model.Email)
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Type</div>
                        <div class="info-value">
                            <span class="feedback-type">@Model.FeedbackType</span>
                        </div>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">Current Status</div>
                    @{
                        var statusClass = "";
                        switch (Model.Status?.ToLower())
                        {
                            case "new":
                                statusClass = "status-new";
                                break;
                            case "in progress":
                            case "inprogress":
                                statusClass = "status-inprogress";
                                break;
                            case "resolved":
                                statusClass = "status-resolved";
                                break;
                            case "closed":
                                statusClass = "status-closed";
                                break;
                            default:
                                statusClass = "status-new";
                                break;
                        }
                    }
                    <div class="status-badge @statusClass">
                        <i class="fas fa-circle" style="font-size: 6px;"></i>
                        @Model.Status
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">Description</div>
                    <div class="description-box">
                        @Model.Description
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Actions Card -->
        <div class="compact-card">
            <div class="card-header">
                <i class="fas fa-edit"></i> Update Feedback
            </div>
            <div class="card-body">
                <!-- Status Update -->
                <div class="form-section">
                    <label class="form-label required">Status</label>
                    <select asp-for="Status" class="form-select form-control-sm" id="statusSelect">
                        <option value="New">New</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Resolved">Resolved</option>
                        <option value="Closed">Closed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <!-- Admin Remarks -->
                <div class="form-section">
                    <label class="form-label required">Admin Remarks</label>
                    <textarea asp-for="AdminRemarks"
                              class="form-control form-control-sm form-textarea"
                              rows="3"
                              placeholder="Enter your remarks here..."
                              maxlength="2000"
                              id="adminRemarks"></textarea>
                    <div class="d-flex justify-content-between">
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="@Url.Action("Complain", "Admin")" class="btn btn-outline-blue btn-sm-custom">
                <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn btn-orange btn-sm-custom" id="submitBtn">
                <i class="fas fa-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
