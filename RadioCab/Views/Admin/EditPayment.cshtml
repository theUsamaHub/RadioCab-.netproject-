@model RadioCab.Models.CDVM

@{
    ViewData["Title"] = "Edit Payment";
    Layout = "~/Views/Shared/admin.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<style>
    :root {
        --white: #FFFFFF;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --orange: #fca311;
        --orange-hover: #e3940f;
        --dark-blue: #14213d;
        --dark-blue-light: #1e2a4a;
        --black: #000000;
    }

    .compact-card {
        max-width: 900px;
        margin: 1.5rem auto;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .card-header.bg-primary {
        background: linear-gradient(135deg, var(--dark-blue) 0%, var(--dark-blue-light) 100%) !important;
        border: none;
        padding: 1rem 1.5rem;
    }

    .compact-section {
        background: var(--white);
        border-radius: 8px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        border: 1px solid var(--medium-gray);
    }

    .section-title {
        color: var(--dark-blue);
        font-size: 0.95rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--orange);
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--dark-blue);
        margin-bottom: 0.3rem;
    }

    .form-control, .form-select {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
        border: 1px solid #dee2e6;
        border-radius: 6px;
    }

        .form-control:disabled {
            background-color: var(--light-gray);
            color: #6c757d;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--orange);
            box-shadow: 0 0 0 0.2rem rgba(252, 163, 17, 0.15);
        }

    .status-section {
        background: linear-gradient(135deg, #fff8e1 0%, #fff3e0 100%);
        border: 1px solid rgba(252, 163, 17, 0.2);
        border-left: 4px solid var(--orange);
    }

    .status-select {
        max-width: 300px;
    }

    .btn-update {
        background: linear-gradient(135deg, var(--orange) 0%, var(--orange-hover) 100%);
        border: none;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-update:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(252, 163, 17, 0.25);
        }

    .btn-back {
        background: var(--white);
        border: 1px solid var(--medium-gray);
        color: var(--dark-blue);
        padding: 0.5rem 1.5rem;
    }

    .info-text {
        font-size: 0.8rem;
        color: #6c757d;
        margin-top: 0.5rem;
        font-style: italic;
    }

    .field-group {
        margin-bottom: 0.75rem;
    }

    @@media (max-width: 768px) {
        .compact-card {
            margin: 0.5rem;
        }

        .compact-section {
            padding: 1rem;
        }
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card compact-card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0"><i class="bi bi-credit-card me-2"></i>Edit Payment Status</h5>
                        <small class="opacity-75">Payment ID: @Model.Single_Payment.PaymentId</small>
                    </div>
                    <span class="badge bg-light text-dark">Admin</span>
                </div>

                <div class="card-body p-0">
                    <div class="p-3 p-md-4">
                        <form asp-action="EditPayment" method="post">
                            <input type="hidden" asp-for="Single_Payment.PaymentId" />

                            <!-- Basic Information -->
                            <div class="compact-section">
                                <h6 class="section-title d-flex align-items-center">
                                    <i class="bi bi-info-circle me-2"></i>Basic Information
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Email</label>
                                        <input type="text" class="form-control" value="@Model.Single_Payment.User.Email" disabled>
                                    </div>
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Payment Date</label>
                                        <input type="text" class="form-control" value="@Model.Single_Payment.PaymentDate.ToString("dd MMM yyyy HH:mm")" disabled>
                                    </div>
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Expiry Date</label>
                                        <input type="text" class="form-control" value="@Model.Single_Payment.ExpiryDate.ToString("dd MMM yyyy")" disabled>
                                    </div>
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Payment Purpose</label>
                                        <input type="text" class="form-control" value="@Model.Single_Payment.PaymentPurpose" disabled>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Details -->
                            <div class="compact-section">
                                <h6 class="section-title d-flex align-items-center">
                                    <i class="bi bi-currency-dollar me-2"></i>Payment Details
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Amount</label>
                                        <input type="text" class="form-control"
                                               value="@Model.Single_Payment.PaymentAmount?.Amount.ToString("C")"
                                               disabled>
                                    </div>
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Membership</label>
                                        <input type="text" class="form-control"
                                               value="@Model.Single_Payment.PaymentAmount?.Membership?.MembershipName"
                                               disabled>
                                    </div>
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Payment Method</label>
                                        <input type="text" class="form-control"
                                               value="@Model.Single_Payment.PaymentMethod?.MethodName"
                                               disabled>
                                    </div>
                                    <div class="col-md-6 field-group">
                                        <label class="form-label">Transaction ID</label>
                                        <input type="text" class="form-control" value="@Model.Single_Payment.TransactionId" disabled>
                                    </div>
                                </div>
                            </div>

                            <!-- Status Update Section (FOCUS AREA) -->
                            <div class="compact-section status-section">
                                <h6 class="section-title d-flex align-items-center">
                                    <i class="bi bi-sliders me-2"></i>Update Payment Status
                                </h6>
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <label asp-for="Single_Payment.PaymentStatus" class="form-label">Status *</label>
                                        <div class="d-flex align-items-center gap-3">
                                            <select asp-for="Single_Payment.PaymentStatus" class="form-select status-select" required>
                                                <option value="">Select Status</option>
                                                <option value="Pending">Pending</option>
                                                <option value="Paid">Paid</option>
                                                <option value="Rejected">Rejected</option>
                                            </select>
                                            <div class="vr d-none d-md-block" style="height: 40px;"></div>
                                            <div class="text-nowrap">
                                                <small class="text-muted">Current:</small>
                                                <span class="badge
                                                    @(Model.Single_Payment.PaymentStatus == "Paid" ? "bg-success" :
                                                                                                            Model.Single_Payment.PaymentStatus == "Rejected" ? "bg-danger" :
                                                                                                            "bg-warning text-dark") ms-1">
                                                    @Model.Single_Payment.PaymentStatus
                                                </span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="Single_Payment.PaymentStatus" class="text-danger small"></span>
                                        <div class="info-text">
                                            <i class="bi bi-info-circle me-1"></i>Only this field can be edited
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between align-items-center pt-3 mt-2 border-top">
                                <a asp-action="PaymentManage" asp-controller="Admin" class="btn btn-back">
                                    <i class="bi bi-arrow-left me-1"></i>Back
                                </a>

                                <button type="submit" class="btn btn-update text-white">
                                    <i class="bi bi-check-circle me-1"></i>Update Status
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Set the selected option in the status dropdown
    document.addEventListener('DOMContentLoaded', function() {
        var currentStatus = '@Model.Single_Payment.PaymentStatus';
        var selectElement = document.getElementById('Single_Payment_PaymentStatus');

        if (selectElement) {
            selectElement.value = currentStatus;

            // Add visual feedback on change
            selectElement.addEventListener('change', function() {
                if (this.value && this.value !== currentStatus) {
                    this.classList.add('is-valid');
                    setTimeout(() => this.classList.remove('is-valid'), 2000);
                }
            });
        }

        // Highlight the update button when status changes
        const updateBtn = document.querySelector('.btn-update');
        const statusSelect = document.querySelector('select[name$="PaymentStatus"]');

        if (statusSelect && updateBtn) {
            statusSelect.addEventListener('change', function() {
                if (this.value && this.value !== currentStatus) {
                    updateBtn.classList.add('pulse');
                    setTimeout(() => updateBtn.classList.remove('pulse'), 1000);
                }
            });
        }
    });
</script>