<div class="payment-amounts-form">
    <div class="page-header">
        <h2><i class="fas fa-money-check-alt"></i> Payment Amount Management</h2>
    </div>

    <!-- Payment Amount Form -->
    <div class="form-container">
        <div class="form-header">
            <h3><i class="fas fa-edit"></i> Payment Amount Details</h3>
        </div>
        <form class="payment-form" method="post" asp-action="PaymentAmountAdd" asp-controller="Admin">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-row">
                <div class="form-group">
                    <label >
                        Membership Type <span class="required">*</span>
                    </label>

                    <select asp-for="paymentvalidate_form.MembershipId"
                            asp-items="@(new SelectList(Model.MembershipList, "MembershipId", "MembershipName"))"
                            class="form-select">
                        <option value="">Select Membership Type</option>
                    </select>



                    <span class="form-hint">Select the membership type this amount applies to</span>
                </div>
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.DurationInMonths">
                        Duration (Months) <span class="required">*</span>
                    </label>
                    <input type="number" class="form-control" id="duration"
                           placeholder="Enter duration in months" min="1" max="120" asp-for="paymentvalidate_form.DurationInMonths">
                    <span class="form-hint">Number of months for this payment plan (1-120)</span>
                </div>
            </div>

            <div class="form-row three-columns">
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.EntityType">
                        Entity Type <span class="required">*</span>
                    </label>
                    <input type="text" class="form-control" id="entityType" asp-for="paymentvalidate_form.EntityType"
                           placeholder="e.g., Individual, Company, Organization"
                           maxlength="50">
                    <span class="form-hint">Type of entity (max 50 characters)</span>
                </div>
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.PaymentType">
                        Payment Type <span class="required">*</span>
                    </label>
                    <input type="text" class="form-control" id="paymentType" asp-for="paymentvalidate_form.PaymentType"
                           placeholder="e.g., Monthly, Quarterly, Annual"
                           maxlength="50" >
                    <span class="form-hint">Payment frequency/type (max 50 characters)</span>
                </div>
                <div class="form-group">
                    <label asp-for="paymentvalidate_form.Amount">
                        Amount <span class="required">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" id="amount" asp-for="paymentvalidate_form.Amount"
                               placeholder="0.00" min="0" step="0.01"
                               pattern="^\d+(\.\d{1,2})?$">
                    </div>
                    <span class="form-hint">Payment amount in USD</span>
                </div>
            </div>


            <div class="form-actions">
                <button type="reset" class="btn-reset">Reset Form</button>
                <button type="submit" class="btn-submit">Save Payment Amount</button>
            </div>
        </form>
    </div>
</div>

