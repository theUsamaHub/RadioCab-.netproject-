@{
    ViewData["Title"] = "Popular";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section PageStyles {
    <link href="~/css/user/popular.css" rel="stylesheet" />
}

<!-- Page Header -->
<section class="page-header bg-black text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Popular</h1>
                <p class="lead mb-0">
                    Discover the most popular companies, drivers, and services on our platform
                </p>
            </div> 
            <div class="col-lg-4">
                <div class="text-lg-end">
                    <span class="badge bg-warning text-black fs-6">
                        <i class="fas fa-star me-2"></i>Top Rated
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Companies -->
@if (ViewBag.PopularCompanies != null)
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-black mb-3">
                    <i class="fas fa-building text-warning me-3"></i>Popular Companies
                </h2>
                <p class="lead text-muted">Top-rated companies based on customer feedback</p>
            </div>
            
            <div class="row g-4">
                @foreach (var item in ViewBag.PopularCompanies)
                {
                    var company = item.Company;
                    var rating = item.AverageRating;
                    var feedbackCount = item.FeedbackCount;
                    
                    <div class="col-md-6 col-lg-4">
                        <div class="popular-card h-100">
                            <div class="popular-header">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="fw-bold text-black mb-1">@company.CompanyName</h5>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-map-marker-alt me-1"></i>@company.City?.CityName
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <div class="rating-display mb-1">
                                            <i class="fas fa-star text-warning"></i>
                                            <span class="fw-bold text-black">@rating.ToString("F1")</span>
                                        </div>
                                        <small class="text-muted">@feedbackCount reviews</small>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(company.Logo))
                                {
                                    <img src="@company.Logo" alt="@company.CompanyName" 
                                         class="popular-logo img-fluid rounded mb-3" 
                                         style="max-height: 60px; object-fit: contain;" />
                                }
                            </div>
                            
                            <div class="popular-body">
                                <p class="text-muted small mb-3">
                                    @(company.Description?.Length > 100 ? company.Description.Substring(0, 100) + "..." : company.Description ?? "No description available.")
                                </p>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-warning text-black">
                                        @(company.Membership?.MembershipName ?? "Basic")
                                    </span>
                                    <a href="@Url.Action("CompanyDetails", "User", new { id = company.CompanyId })" 
                                       class="btn btn-warning btn-sm">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Popular Drivers -->
@if (ViewBag.PopularDrivers != null)
{
    <section class="py-5 bg-white">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-black mb-3">
                    <i class="fas fa-user-tie text-warning me-3"></i>Popular Drivers
                </h2>
                <p class="lead text-muted">Experienced drivers with excellent ratings</p>
            </div>
            
            <div class="row g-4">
                @foreach (var item in ViewBag.PopularDrivers)
                {
                    var driver = item.Driver;
                    var rating = item.AverageRating;
                    var feedbackCount = item.FeedbackCount;
                    var serviceCount = item.ServiceCount;
                    
                    <div class="col-md-6 col-lg-4">
                        <div class="popular-card h-100">
                            <div class="popular-header">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="fw-bold text-black mb-1">@driver.DriverName</h5>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-map-marker-alt me-1"></i>@driver.City?.CityName
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <div class="rating-display mb-1">
                                            <i class="fas fa-star text-warning"></i>
                                            <span class="fw-bold text-black">@rating.ToString("F1")</span>
                                        </div>
                                        <small class="text-muted">@feedbackCount reviews</small>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(driver.DriverPhoto))
                                {
                                    <img src="@driver.DriverPhoto" alt="@driver.DriverName" 
                                         class="popular-photo img-fluid rounded-circle mb-3" 
                                         style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="popular-photo-placeholder mb-3">
                                        <i class="fas fa-user fa-2x text-warning"></i>
                                    </div>
                                }
                            </div>
                            
                            <div class="popular-body">
                                <p class="text-muted small mb-3">
                                    @(driver.Description?.Length > 80 ? driver.Description.Substring(0, 80) + "..." : driver.Description ?? "No description available.")
                                </p>
                                
                                <div class="driver-stats mb-3">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-cogs me-1"></i>@serviceCount Services
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-briefcase me-1"></i>@driver.Experience
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-warning text-black">
                                        @(driver.Membership?.MembershipName ?? "Basic")
                                    </span>
                                    <a href="@Url.Action("DriverDetails", "User", new { id = driver.DriverId })" 
                                       class="btn btn-warning btn-sm">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Popular Services -->
@if (ViewBag.PopularServices != null)
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-black mb-3">
                    <i class="fas fa-cogs text-warning me-3"></i>Popular Services
                </h2>
                <p class="lead text-muted">Most requested services on our platform</p>
            </div>
            
            <div class="row g-4">
                @foreach (var item in ViewBag.PopularServices)
                {
                    var service = item.Service;
                    var totalUsage = item.TotalUsage;
                    
                    <div class="col-md-6 col-lg-4">
                        <div class="service-popular-card h-100">
                            <div class="service-icon">
                                <i class="@service.Icon fa-3x text-warning"></i>
                            </div>
                            <div class="service-content">
                                <h4 class="fw-bold text-black mb-2">@service.ServiceName</h4>
                                <p class="text-muted small mb-3">
                                    @(service.Description?.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)
                                </p>
                                
                                <div class="service-stats mb-3">
                                    <div class="d-flex justify-content-between">
                                        <span class="badge bg-warning text-black">
                                            <i class="fas fa-users me-1"></i>@totalUsage Providers
                                        </span>
                                        <span class="badge bg-success text-white">
                                            <i class="fas fa-check me-1"></i>Available
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="progress mb-3" style="height: 8px;">
                                    <div class="progress-bar bg-warning" role="progressbar" 
                                         style="width: @(Math.Min(totalUsage * 10, 100))%">
                                    </div>
                                </div>
                                
                                <div class="text-center">
                                    <small class="text-muted">Popularity Level</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Leaderboard Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-black mb-3">
                <i class="fas fa-trophy text-warning me-3"></i>Leaderboard
            </h2>
            <p class="lead text-muted">Top performers this month</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="leaderboard-card">
                    <h4 class="fw-bold text-black mb-4">
                        <i class="fas fa-building text-warning me-2"></i>Top Companies
                    </h4>
                    @if (ViewBag.PopularCompanies != null)
                    {
                        var topCompanies = ViewBag.PopularCompanies.Take(5);
                        int rank = 1;
                        @foreach (var item in topCompanies)
                        {
                            var company = item.Company;
                            var rating = item.AverageRating;
                            
                            <div class="leaderboard-item d-flex align-items-center mb-3">
                                <div class="rank-badge me-3">
                                    <span class="badge bg-warning text-black fs-6">#@rank</span>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-black">@company.CompanyName</h6>
                                    <small class="text-muted">@company.City?.CityName</small>
                                </div>
                                <div class="rating-badge">
                                    <i class="fas fa-star text-warning"></i>
                                    <span class="fw-bold">@rating.ToString("F1")</span>
                                </div>
                            </div>
                            rank++;
                        }
                    }
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="leaderboard-card">
                    <h4 class="fw-bold text-black mb-4">
                        <i class="fas fa-user-tie text-warning me-2"></i>Top Drivers
                    </h4>
                    @if (ViewBag.PopularDrivers != null)
                    {
                        var topDrivers = ViewBag.PopularDrivers.Take(5);
                        int rank = 1;
                        @foreach (var item in topDrivers)
                        {
                            var driver = item.Driver;
                            var rating = item.AverageRating;
                            
                            <div class="leaderboard-item d-flex align-items-center mb-3">
                                <div class="rank-badge me-3">
                                    <span class="badge bg-warning text-black fs-6">#@rank</span>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-black">@driver.DriverName</h6>
                                    <small class="text-muted">@driver.City?.CityName</small>
                                </div>
                                <div class="rating-badge">
                                    <i class="fas fa-star text-warning"></i>
                                    <span class="fw-bold">@rating.ToString("F1")</span>
                                </div>
                            </div>
                            rank++;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
