    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-black mb-3">How to Apply</h2>
            <p class="lead text-muted">Follow these simple steps to apply for jobs</p>
        </div>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="step-card text-center">
                    <div class="step-number">1</div>
                    <i class="fas fa-search fa-2x text-warning mb-3"></i>
                    <h5 class="fw-bold text-black mb-2">Find Vacancies</h5>
                    <p class="text-muted small">Browse through available job listings</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card text-center">
                    <div class="step-number">2</div>
                    <i class="fas fa-eye fa-2x text-warning mb-3"></i>
                    <h5 class="fw-bold text-black mb-2">View Details</h5>
                    <p class="text-muted small">Check job requirements and description</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card text-center">
                    <div class="step-number">3</div>
                    <i class="fas fa-file-alt fa-2x text-warning mb-3"></i>
                    <h5 class="fw-bold text-black mb-2">Prepare Documents</h5>
                    <p class="text-muted small">Have your CV and cover letter ready</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card text-center">
                    <div class="step-number">4</div>
                    <i class="fas fa-paper-plane fa-2x text-warning mb-3"></i>
                    <h5 class="fw-bold text-black mb-2">Submit Application</h5>
                    <p class="text-muted small">Fill the form and upload your documents</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const cityFilter = document.getElementById('cityFilter');
            const jobTypeFilter = document.getElementById('jobTypeFilter');
            const vacancyItems = document.querySelectorAll('.vacancy-item');
            const noResults = document.getElementById('noResults');

            function filterVacancies() {
                let visibleCount = 0;
                const searchTerm = searchInput.value.toLowerCase();
                const selectedCity = cityFilter.value.toLowerCase();
                const selectedJobType = jobTypeFilter.value.toLowerCase();

                vacancyItems.forEach(item => {
                    const title = item.dataset.title;
                    const company = item.dataset.company;
                    const city = item.dataset.city;
                    const jobtype = item.dataset.jobtype;
                    const experience = item.dataset.experience;

                    // Search in multiple fields
                    const matchesSearch = title.includes(searchTerm) ||
                                         company.includes(searchTerm) ||
                                         city.includes(searchTerm) ||
                                         experience.includes(searchTerm);
                    const matchesCity = !selectedCity || city.includes(selectedCity);
                    const matchesJobType = !selectedJobType || jobtype.includes(selectedJobType);

                    if (matchesSearch && matchesCity && matchesJobType) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });

                if (visibleCount === 0) {
                    noResults.classList.remove('d-none');
                } else {
                    noResults.classList.add('d-none');
                }
            }

            // Auto-filter on input/change
            searchInput.addEventListener('input', filterVacancies);
            cityFilter.addEventListener('change', filterVacancies);
            jobTypeFilter.addEventListener('change', filterVacancies);

            // Reset filters
            window.resetFilters = function() {
                searchInput.value = '';
                cityFilter.value = '';
                jobTypeFilter.value = '';
                filterVacancies();
            };

            // Initialize filter
            filterVacancies();
        });
    </script>
}