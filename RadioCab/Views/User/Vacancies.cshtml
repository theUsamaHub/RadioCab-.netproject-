@model IEnumerable<RadioCab.Models.ViewModels.VacancyVM>
@{
    ViewData["Title"] = "Vacancies";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section PageStyles {
    <link href="~/css/user/vacancies.css" rel="stylesheet" />
}

<!-- Page Header -->
<section class="page-header bg-black text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Vacancies</h1>
                <p class="lead mb-0">
                    Find your next career opportunity in transportation
                </p>
            </div>
            <div class="col-lg-4">
                <div class="text-lg-end">
                    <span class="badge bg-warning text-black fs-6">
                        <i class="fas fa-briefcase me-2"></i>@ViewBag.TotalVacancies Vacancies
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Search and Filter -->
<section class="py-4 bg-white border-bottom">
    <div class="container">
        <div class="row g-3">
            <div class="col-lg-4">
                <div class="input-group">
                    <span class="input-group-text bg-black text-warning">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control" id="searchInput"
                           placeholder="Search by job title, company, or location...">
                </div>
            </div>
            <div class="col-lg-3">
                <select class="form-select" id="cityFilter">
                    <option value="">All Cities</option>
                    @foreach (var city in Model.Select(v => v.Vacancy.Company.City).Where(c => c != null).Distinct().OrderBy(c => c.CityName))
                    {
                        <option value="@city.CityName.ToLower()">@city.CityName</option>
                    }
                </select>
            </div>
            <div class="col-lg-3">
                <select class="form-select" id="jobTypeFilter">
                    <option value="">All Job Types</option>
                    @foreach (var jobType in ViewBag.JobTypes)
                    {
                        <option value="@jobType.ToString().ToLower()">@jobType</option>
                    }
                </select>
            </div>
            <div class="col-lg-2">
                <button class="btn btn-warning w-100" onclick="filterVacancies()">
                    <i class="fas fa-filter me-2"></i>Filter
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Vacancies List -->
<section class="py-5 vacancy-section">
    <div class="container">
        <div class="section-header">
            <h2 class="display-6 fw-bold text-black mb-2">Current Opportunities</h2>
            <p class="text-muted lead mb-0">Find your next career move with trusted companies</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4" id="vacanciesContainer">
                @foreach (var vacancyVM in Model)
                {
                    var vacancy = vacancyVM.Vacancy;
                    <div class="col-lg-6 vacancy-item"
                         data-title="@vacancy.JobTitle.ToLower()"
                         data-company="@vacancy.Company.CompanyName.ToLower()"
                         data-city="@vacancy.Company.City?.CityName?.ToLower()"
                         data-jobtype="@vacancy.JobType.ToLower()"
                         data-experience="@(vacancy.RequiredExperience?.ToLower() ?? "")">
                        <!-- Vacancy Card - Compact Bootstrap Version -->
                        <div class="vacancy-card h-100">

                        <div class="card-header-custom">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1 me-2">
                                    <h5 class="job-title">@vacancy.JobTitle</h5>
                                    <div class="company-badge">
                                        <i class="fas fa-building me-1 text-warning"></i>
                                        <span class="text-muted">@vacancy.Company.CompanyName</span>
                                    </div>
                                    <p class="location">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        @(vacancy.Location ?? vacancy.Company.City?.CityName)
                                    </p>
                                </div>
                                <div class="text-end flex-shrink-0">
                                    <span class="job-type-badge @vacancy.JobType.Replace(" ", "-").ToLower()">
                                        @vacancy.JobType
                                    </span>
                                    <small class="posted-date d-block">
                                        <i class="fas fa-calendar-alt"></i>
                                        @GetTimeAgo(vacancy.CreatedAt)
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="job-description">
                            <h6>Job Description</h6>
                            <p>
                                @(vacancy.JobDescription?.Length > 150
                                                            ? vacancy.JobDescription.Substring(0, 150) + "..."
                                                            : vacancy.JobDescription)
                                </p>
                            </div>

                            <div class="job-details-grid">
                                @if (!string.IsNullOrEmpty(vacancy.RequiredExperience))
                                {
                                    <div class="job-detail-item">
                                        <small>Experience</small>
                                        <span>@vacancy.RequiredExperience</span>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(vacancy.Salary))
                                {
                                    <div class="job-detail-item">
                                        <small>Salary</small>
                                        <span>@vacancy.Salary</span>
                                    </div>
                                }
                            </div>

                            <div class="company-info">
                                <div class="company-logo">
                                    @if (!string.IsNullOrEmpty(vacancy.Company.CompanyLogo))
                                    {
                                        <img src="@vacancy.Company.CompanyLogo" alt="@vacancy.Company.CompanyName">
                                    }
                                    else
                                    {
                                        <i class="fas fa-building"></i>
                                    }
                                </div>
                                <div class="company-details">
                                    <small>Company</small>
                                    <strong>@vacancy.Company.CompanyName</strong>
                                </div>
                            </div>

                            <div class="application-stats">
                                <div class="application-count">
                                    <i class="fas fa-users"></i>
                                    <span class="fw-semibold">@vacancyVM.ApplicationCount</span>
                                    <span class="text-muted">applications</span>
                                </div>
                                @if (vacancyVM.ApplicationCount > 0)
                                {
                                    var progressPercentage = Math.Min((vacancyVM.ApplicationCount / 50.0) * 100, 100);
                                    <div class="application-progress">
                                        <div class="progress-bar" style="width: @progressPercentage%"></div>
                                    </div>
                                }
                            </div>

                            <div class="action-buttons">
                                <a href="@Url.Action("VacancyDetails", "User", new { id = vacancy.VacancyId })"
                                   class="btn-sm-custom btn-outline-custom">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                                @if (vacancyVM.IsEligibleToApply)
                                {
                                    <a href="@Url.Action("VacancyDetails", "User", new { id = vacancy.VacancyId })#applyForm"
                                       class="btn-sm-custom btn-gradient-custom">
                                        <i class="fas fa-paper-plane"></i>
                                        Apply Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- No Results Message -->
            <div id="noResults" class="empty-state d-none">
                <div class="empty-state-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h4 class="text-black fw-bold mb-3">No Vacancies Found</h4>
                <p class="text-muted mb-4">Try adjusting your search or filter criteria</p>
                <button class="btn-modern btn-gradient" onclick="resetFilters()">
                    <i class="fas fa-times me-2"></i>Reset Filters
                </button>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-briefcase"></i>
                </div>
                <h4 class="text-black fw-bold mb-3">No Vacancies Available</h4>
                <p class="text-muted mb-2">There are currently no job openings available.</p>
                <p class="text-muted mb-4">Check back later for new opportunities or subscribe to job alerts.</p>
                <a href="@Url.Action("Register", "Account")" class="btn-modern btn-gradient">
                    <i class="fas fa-bell me-2"></i>Subscribe to Job Alerts
                </a>
            </div>
        }
    </div>
</section>

@functions {
    public string GetTimeAgo(DateTime date)
    {
        var timeSpan = DateTime.Now - date;

        if (timeSpan.TotalMinutes < 1)
            return "just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hours ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";
        if (timeSpan.TotalDays < 30)
            return $"{(int)(timeSpan.TotalDays / 7)} weeks ago";

        return date.ToString("MMM dd, yyyy");
    }
}

<!-- Stats Section -->
@if (Model != null && Model.Any())
{
    <section class="py-5 bg-white">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="stat-card text-center">
                        <i class="fas fa-briefcase fa-3x text-warning mb-3"></i>
                        <h3 class="text-black fw-bold">@ViewBag.TotalVacancies</h3>
                        <p class="text-muted">Total Vacancies</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card text-center">
                        <i class="fas fa-building fa-3x text-warning mb-3"></i>
                        <h3 class="text-black fw-bold">@ViewBag.TotalCompanies</h3>
                        <p class="text-muted">Hiring Companies</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card text-center">
                        <i class="fas fa-map-marker-alt fa-3x text-warning mb-3"></i>
                        <h3 class="text-black fw-bold">@ViewBag.TotalCities</h3>
                        <p class="text-muted">Cities</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card text-center">
                        <i class="fas fa-users fa-3x text-warning mb-3"></i>
                        <h3 class="text-black fw-bold">@ViewBag.TotalApplications</h3>
                        <p class="text-muted">Total Applications</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- Application Tips Section -->
