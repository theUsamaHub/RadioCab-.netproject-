@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RadioCab - Sign Up</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/regcard.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-dark bg-black fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" href="@Url.Action("Index", "User")">
                <i class="fas fa-taxi me-2"></i>RadioCab
            </a>
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-warning">
                <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
        </div>
    </nav>

    <div class="main-container">
        <div class="header mt-4 mb-4">
            <h1 class="text-warning fw-bold">Join RadioCab</h1>
            <p class="text-light mt-2">Choose your account type to get started</p>
            <p class="text-muted mt-1">Register as a driver or company to access our platform</p>
        </div>


        <div class="cards-container">
            <!-- Driver Card -->
            <div class="signup-card driver-card">
                <div class="card-badge">For Individuals</div>
                <div class="card-icon">
                    <i class="fas fa-user-tie"></i>
                </div>
                <h3 class="card-title">Driver Registration</h3>
                <p class="card-description">Start earning by driving with top companies</p>

                <div class="card-features">
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Connect with verified companies</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Flexible working hours</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Competitive earnings</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Priority job alerts</span>
                    </div>
                </div>

                <div class="pricing-info">
                    @if (ViewBag.DriverPayment != null)
                    {
                        var driverPayments = (List<RadioCab.Models.PaymentAmount>)ViewBag.DriverPayment;
                        foreach (var payment in driverPayments.OrderBy(p => p.PaymentType))
                        {
                            <div class="price-tag @(payment.PaymentType.ToLower() == "quarterly" ? "quarterly" : "")">
                                <span class="price">@payment.Amount.ToString("C")</span>
                                <span class="period">/@payment.PaymentType</span>
                                @if (payment.DurationInMonths > 1)
                                {
                                    <span class="badge bg-warning text-black mt-2">
                                        @payment.DurationInMonths months
                                    </span>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="price-tag">
                            <span class="price">$2,500</span>
                            <span class="period">/month</span>
                        </div>
                        <div class="price-tag quarterly">
                            <span class="price">$6,500</span>
                            <span class="period">/quarter</span>
                        </div>
                    }
                </div>

                <div class="d-grid gap-2">
                    <a class="signup-btn btn-warning" asp-controller="Account" asp-action="DriverRegister">
                        <i class="fas fa-car me-2"></i> Register as Driver
                    </a>
                    <a class="more-info-btn" href="#">
                        <i class="fas fa-info-circle me-1"></i> Learn More
                    </a>
                </div>
            </div>

            <!-- Company Card -->
            <div class="signup-card company-card">
                <div class="card-badge">For Businesses</div>
                <div class="card-icon">
                    <i class="fas fa-building"></i>
                </div>
                <h3 class="card-title">Company Registration</h3>
                <p class="card-description">Find reliable drivers for your transportation business</p>

                <div class="card-features">
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Access verified driver database</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Advertise your services</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Monthly invoicing</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-warning"></i>
                        <span>Dedicated support</span>
                    </div>
                </div>

                <div class="pricing-info">
                    @if (ViewBag.CompanyPayment != null)
                    {
                        var companyPayments = (List<RadioCab.Models.PaymentAmount>)ViewBag.CompanyPayment;
                        foreach (var payment in companyPayments.OrderBy(p => p.PaymentType))
                        {
                            <div class="price-tag @(payment.PaymentType.ToLower() == "quarterly" ? "quarterly" : "")">
                                <span class="price">@payment.Amount.ToString("C")</span>
                                <span class="period">/@payment.PaymentType</span>
                                @if (payment.DurationInMonths > 1)
                                {
                                    <span class="badge bg-warning text-black mt-2">
                                        @payment.DurationInMonths months
                                    </span>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="price-tag">
                            <span class="price">$4,500</span>
                            <span class="period">/month</span>
                        </div>
                        <div class="price-tag quarterly">
                            <span class="price">$12,000</span>
                            <span class="period">/quarter</span>
                        </div>
                    }
                </div>

                <div class="d-grid gap-2">
                    <a class="signup-btn btn-warning" asp-controller="Account" asp-action="CompanyRegister">
                        <i class="fas fa-briefcase me-2"></i> Register as Company
                    </a>
                    <a class="more-info-btn" href="#">
                        <i class="fas fa-info-circle me-1"></i> Learn More
                    </a>
                </div>
            </div>
        </div>

        <div class="footer-info">
            <p class="text-center text-muted">
                <i class="fas fa-shield-alt me-2 text-warning"></i>
                All registrations are verified and secure
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("Index", "User")" class="text-warning">
                    <i class="fas fa-home me-1"></i> Home
                </a>
                <span class="text-muted">|</span>
                <a href="@Url.Action("Login", "Account")" class="text-warning">
                    <i class="fas fa-sign-in-alt me-1"></i> Already have account?
                </a>
                <span class="text-muted">|</span>
                <a href="@Url.Action("Services", "User")" class="text-warning">
                    <i class="fas fa-question-circle me-1"></i> Need Help?
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>