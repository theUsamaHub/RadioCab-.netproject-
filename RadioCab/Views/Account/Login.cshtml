@model RadioCab.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RadioCab - User Login</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <!-- Animated Background Elements -->
    <div class="bg-overlay"></div>
    <div class="floating-elements">
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
    </div>
    <div class="moving-lines">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <div class="logo-section">
            <div class="logo">
                <a asp-controller="User" asp-action="Index" style="text-decoration:none; color:white;"><i class="fas fa-taxi"></i> RADIO CAB</a>
            </div>
            <p class="tagline">Welcome back to your reliable ride</p>
        </div>

        <div class="login-card">
            <div class="card-header">
                <h3>Login to Your Account</h3>
            </div>

            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post" id="loginForm">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i>Email Address
                        </label>
                        <div class="input-with-icon">
                            <i class="fas fa-envelope form-icon"></i>
                            <input type="email" asp-for="Email" placeholder="Enter your email" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" asp-for="Password" class="form-label">
                            <i class="fas fa-lock"></i>Password
                        </label>
                        <div class="input-with-icon">
                            <i class="fas fa-lock form-icon"></i>
                            <input type="password" asp-for="Password" id="password" placeholder="Enter your password" required>
                            <button type="button" class="password-toggle" id="togglePassword" aria-label="Toggle password visibility">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-options">
                        <div class="remember-me">
                            <input type="checkbox" id="rememberMe" name="rememberMe">
                            <label for="rememberMe">Remember me</label>
                        </div>
                    </div>

                    <button type="submit" class="btn-login" id="loginBtn">
                        <i class="fas fa-sign-in-alt"></i>Login
                    </button>

                    <div class="register-link">
                        Don't have an account?
                        <a asp-controller="Account" asp-action="RegCard">Register Now</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        togglePassword.addEventListener('click', function() {
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                this.setAttribute('aria-label', 'Hide password');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                this.setAttribute('aria-label', 'Show password');
            }
        });

        // Form submission handling
        const loginForm = document.getElementById('loginForm');
        const loginBtn = document.getElementById('loginBtn');

        loginForm.addEventListener('submit', function(e) {
            const emailInput = document.querySelector('input[type="email"]');

            // Basic client-side validation
            if (!emailInput.value || !passwordInput.value) {
                e.preventDefault();

                // Add error animation
                loginForm.classList.add('shake');
                setTimeout(() => loginForm.classList.remove('shake'), 500);

                if (!emailInput.value) {
                    emailInput.focus();
                    emailInput.style.borderColor = '#ff6b6b';
                    emailInput.style.boxShadow = '0 0 0 3px rgba(255, 107, 107, 0.2)';
                } else {
                    passwordInput.focus();
                    passwordInput.style.borderColor = '#ff6b6b';
                    passwordInput.style.boxShadow = '0 0 0 3px rgba(255, 107, 107, 0.2)';
                }
                return;
            }

            // Show loading state
            loginBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Logging in...';
            loginBtn.classList.add('loading');
            loginBtn.disabled = true;

            // Add pulse animation to button
            loginBtn.style.animation = 'pulse 1s infinite';
        });

        // Clear validation styles on input
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', function() {
                this.style.borderColor = '';
                this.style.boxShadow = '';
            });

            // Add focus effect
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.02)';
            });

            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        });

        // Add shake animation class
        const style = document.createElement('style');
        style.textContent = `
            .shake {
                animation: shake 0.5s ease;
            }
        `;
        document.head.appendChild(style);

        // Auto-focus email input with delay
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                const emailInput = document.querySelector('input[type="email"]');
                if (emailInput && !emailInput.value) {
                    emailInput.focus();
                    emailInput.parentElement.style.transform = 'scale(1.02)';

                    // Add typing effect to placeholder
                    const placeholder = emailInput.getAttribute('placeholder');
                    emailInput.setAttribute('placeholder', '');

                    let i = 0;
                    const typeWriter = () => {
                        if (i < placeholder.length) {
                            emailInput.setAttribute('placeholder', placeholder.substring(0, i + 1));
                            i++;
                            setTimeout(typeWriter, 50);
                        }
                    };
                    setTimeout(typeWriter, 300);
                }
            }, 800);
        });

        // Add parallax effect to floating elements on mouse move
        document.addEventListener('mousemove', function(e) {
            const floatingElements = document.querySelectorAll('.floating-element');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;

            floatingElements.forEach((element, index) => {
                const speed = 0.5 + (index * 0.1);
                const xMove = (x - 0.5) * 20 * speed;
                const yMove = (y - 0.5) * 20 * speed;

                element.style.transform = `translate(${xMove}px, ${yMove}px)`;
            });
        });
    </script>
</body>
</html>